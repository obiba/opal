<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:context="http://www.springframework.org/schema/context"
  xsi:schemaLocation="
        http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context 
        http://www.springframework.org/schema/context/spring-context-3.0.xsd">

  <import resource="config.xml" />
  <import resource="classpath:spring/opal-core/context.xml" />

  <bean id="opalShellHolder" class="org.obiba.opal.shell.security.ShiroSessionOpalShellHolder" />

  <bean id="consoleCallbackHandler" class="org.obiba.opal.shell.security.ShellCallbackHandler">
    <constructor-arg ref="opalShellHolder" />
  </bean>

  <bean class="org.obiba.opal.server.sshd.OpalSshServer" init-method="start" destroy-method="stop">
    <constructor-arg>
      <bean class="org.obiba.opal.server.SecureShellCommandRegistry" />
    </constructor-arg>
    <constructor-arg>
      <bean class="org.obiba.opal.shell.jline.JLineOpalShellFactory" />
    </constructor-arg>
    <constructor-arg ref="opalShellHolder" />
    <constructor-arg value="${org.obiba.opal.ssh.port}" />
  </bean>

  <bean class="org.obiba.opal.server.httpd.OpalHttpServer" init-method="start" destroy-method="stop" />

  <bean class="org.obiba.opal.server.httpd.OpalJettyServer" init-method="start" destroy-method="stop" />

  <bean class="org.obiba.opal.server.rest.OpalApplicationFactory" />

  <context:component-scan base-package="org.obiba.opal.server" />

</beans>
