<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">


  <g:FlowPanel>
    <b:Breadcrumbs ui:field="breadcrumbs" />
    <g:FlowPanel>
      <g:Button ui:field="reportTemplateButton" styleName="btn iconb i-plus">
        <ui:msg description="Add Report Template label">Add Report Template</ui:msg>
      </g:Button>
      <g:Button ui:field="refreshButton" styleName="btn iconb i-sync">
        <ui:msg description="Refresh jobs list">Refresh</ui:msg>
      </g:Button>
      <o:HelpImage page="Generating+Reports"></o:HelpImage>
    </g:FlowPanel>
    <g:SplitLayoutPanel>
      <g:center>
        <g:ScrollPanel width="100%" ui:field="reportTemplateDetailsPanel"/>
      </g:center>
      <g:west size='240'>
        <g:ScrollPanel ui:field="reportTemplateListPanel"/>
      </g:west>
    </g:SplitLayoutPanel>
  </g:FlowPanel>

</ui:UiBinder>