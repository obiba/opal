<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    xmlns:b2="urn:import:com.github.gwtbootstrap.client.ui.base"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>
    <g:FlowPanel addStyleNames="page-header">
      <b:Breadcrumbs ui:field="breadcrumbs"/>
    </g:FlowPanel>

    <b:FluidRow>
      <b:Column size="12">
        <b:FluidRow>
          <b:Column size="9">
            <b:Heading size="4" ui:field="vocabularyName" addStyleNames="inline-block"/>
            <b2:IconAnchor icon="EDIT" addStyleNames="small-indent" ui:field="editVocabulary">
            </b2:IconAnchor>
          </b:Column>
        </b:FluidRow>
      </b:Column>
    </b:FluidRow>
    <b:FluidRow>
      <b:Column size="12">
        <o:PropertiesTable ui:field="vocabularyProperties"/>
      </b:Column>
    </b:FluidRow>

    <b:FluidRow>
      <b:Column size="12">
        <b:Heading size="4" addStyleNames="inline-block">Terms</b:Heading>
      </b:Column>
    </b:FluidRow>

    <b:FluidRow>
      <b:Column size="6">
        <g:FlowPanel ui:field="termsLinks" addStyleNames="items"/>
      </b:Column>
      <b:Column size="6">
        <g:FlowPanel ui:field="termPropertiesPanel">
          <b:Heading size="4" addStyleNames="inline-block, no-top-margin" ui:field="termTitle"/>
          <o:PropertiesTable ui:field="termProperties"/>
        </g:FlowPanel>
      </b:Column>
    </b:FluidRow>

  </g:FlowPanel>
</ui:UiBinder>