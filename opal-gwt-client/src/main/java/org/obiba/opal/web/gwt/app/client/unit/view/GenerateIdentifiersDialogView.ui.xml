<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <g:DialogBox ui:field="dialog" autoHide="false" modal="true" glassEnabled="true">
    <g:DockLayoutPanel unit="EM" ui:field="content" height="25em" width="30em">
      <g:center>
        <g:ScrollPanel>
          <g:FlowPanel addStyleNames="main">
            <g:FlowPanel styleName="input">
              <g:Label ui:field="confirmationMessage" addStyleNames="p large-bottom-margin"><ui:msg
                  description="Confirm Generate Functional Unit Identifiers">Description</ui:msg></g:Label>
            </g:FlowPanel>
            <g:FlowPanel styleName="input">
              <g:Label addStyleNames="key"><ui:msg description="Identifiers size">Identifier size</ui:msg></g:Label>
              <o:NumericTextBox ui:field="size" width="6em" minConstrained="true" maxConstrained="false"></o:NumericTextBox>
            </g:FlowPanel>
            <g:FlowPanel styleName="input">
              <g:Label addStyleNames="key"><ui:msg description="Identifiers prefix">Identifier Prefix</ui:msg></g:Label>
              <g:TextBox name="prefix" ui:field="prefix"></g:TextBox>
            </g:FlowPanel>
            <g:FlowPanel>
              <g:CheckBox ui:field="allowZeros" addStyleNames="key">
                <ui:msg description="Identifiers Allow zeros label">Allow zeros</ui:msg>
              </g:CheckBox>
            </g:FlowPanel>
          </g:FlowPanel>
        </g:ScrollPanel>
      </g:center>
      <g:south size="4">
        <g:HTMLPanel addStyleNames="footer">
          <o:ResizeHandle ui:field="resizeHandle"></o:ResizeHandle>
          <span class="right-aligned top-margin">
            <g:Button ui:field="generateButton" styleName="btn btn-primary">
              <ui:msg description="Generate Identifiers button label">Save</ui:msg>
            </g:Button>
            <g:Button ui:field="cancelButton" styleName="btn">
              <ui:msg description="Cancel button label">Cancel</ui:msg>
            </g:Button>
          </span>
        </g:HTMLPanel>
      </g:south>
    </g:DockLayoutPanel>
  </g:DialogBox>

</ui:UiBinder>