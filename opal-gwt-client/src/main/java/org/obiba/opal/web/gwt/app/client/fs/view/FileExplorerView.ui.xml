<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <o:WorkbenchLayout>
    <g:FlowPanel ui:field="breadcrumbs" />
    <g:FlowPanel>
      <g:FlowPanel styleName="btn-group">
        <g:Button ui:field="createFolderButton" styleName="btn iconb i-plus">
          <ui:msg description="Create Folder label">Create Folder</ui:msg>
        </g:Button>
        <g:Button ui:field="fileUploadButton" styleName="btn iconb i-up">
          <ui:msg description="Upload File label">Upload</ui:msg>
        </g:Button>
        <g:Button ui:field="fileDownloadButton" styleName="btn iconb i-down">
          <ui:msg description="Download File label">Download</ui:msg>
        </g:Button>
      </g:FlowPanel>
      <g:Button ui:field="fileDeleteButton" styleName="btn iconb i-disapprove left-aligned">
        <ui:msg description="Delete File label">Delete</ui:msg>
      </g:Button>
      <o:HelpImage page="Working+with+Files"></o:HelpImage>
    </g:FlowPanel>
    <g:SplitLayoutPanel>
      <g:west size="200">
        <g:ScrollPanel ui:field="fileSystemTreePanel">
        </g:ScrollPanel>
      </g:west>
      <g:center>
        <g:ScrollPanel ui:field="folderDetailsPanel">
        </g:ScrollPanel>
      </g:center>
    </g:SplitLayoutPanel>
  </o:WorkbenchLayout>

</ui:UiBinder>