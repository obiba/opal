<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator">

  <g:FlowPanel>

    <b:Form type="INLINE">
      <b:ControlGroup>
        <b:Controls>
          <b:InputAddOn>
            <b:TextBox ui:field="newSettings"/>
            <b:Button icon="PLUS" type="SUCCESS" ui:field="addSettings" addStyleNames="small-indent">
              <ui:msg description="Add label">Add</ui:msg>
            </b:Button>
          </b:InputAddOn>
        </b:Controls>
      </b:ControlGroup>
    </b:Form>

    <b:Accordion ui:field="accordion" addStyleNames="small-top-margin"/>

  </g:FlowPanel>
</ui:UiBinder>
