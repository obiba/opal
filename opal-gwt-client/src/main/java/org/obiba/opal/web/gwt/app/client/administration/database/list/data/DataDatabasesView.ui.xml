<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>
    <b:Heading size="4" addStyleNames="inline-block top-margin">
      <ui:msg description="Databases label">Data Databases</ui:msg>
    </b:Heading>

    <b:Paragraph>
      <ui:msg description="Databases help">Databases can have different purposes: storage, import or export.</ui:msg>
    </b:Paragraph>

    <b:Alert type="WARNING" close="false" visible="false" animation="true" ui:field="hibernateAlertPanel">
      <ui:msg description="Deprecated database schema label">Some databases are using the <strong>Opal SQL</strong> schema. This database structure is deprecated and support will be removed in version 5.0.
      </ui:msg>
      <g:Label addStyleNames="top-margin no-bottom-margin help">
        <ui:msg description="Deprecated database schema help">
          Use the Project backup / restore service (either form the project's administration page or using the Python command-line) to migrate to another database schema. MongoDB is recommended for its versatility.
        </ui:msg>
      </g:Label>
    </b:Alert>

    <b:DropdownButton ui:field="registerDataDatabase" addStyleNames="small-top-margin" icon="PLUS" type="INFO">
      <b:NavLink ui:field="createSql">
        <ui:msg description="Create SQL database label">SQL</ui:msg>
      </b:NavLink>
      <b:NavLink ui:field="createMongo">
        <ui:msg description="Create MongoDB database label">MongoDB</ui:msg>
      </b:NavLink>
    </b:DropdownButton>

    <o:OpalSimplePager ui:field="pager" location="RIGHT" addStyleNames="pull-right small-top-margin"/>
    <o:Table ui:field="table" addStyleNames="small-top-margin"/>

  </g:FlowPanel>
</ui:UiBinder>