<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:b2="urn:import:com.github.gwtbootstrap.client.ui.base"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>

    <g:FlowPanel>
      <b:ButtonGroup addStyleNames="pull-right">
        <b:Button icon="TRASH" ui:field="remove">
        </b:Button>
      </b:ButtonGroup>
      <b:DropdownButton text="Tasks" icon="TASKS" ui:field="tasksBtn" addStyleNames="pull-right">
        <b:NavLink icon="SIGNOUT" ui:field="exportData">
          <ui:msg description="Export data label">Export data...</ui:msg>
        </b:NavLink>
        <b:NavLink icon="COPY" ui:field="copyData">
          <ui:msg description="Copy data label">Copy data...</ui:msg>
        </b:NavLink>
      </b:DropdownButton>
      <b:DropdownButton text="Download" icon="DOWNLOAD" ui:field="downloadBtn" addStyleNames="pull-right">
        <b:NavLink ui:field="downloadDictionary">
          <ui:msg description="Download dictionary label">Download dictionary</ui:msg>
        </b:NavLink>
        <b:NavLink ui:field="downloadView">
          <ui:msg description="Download view label">Download view</ui:msg>
        </b:NavLink>
      </b:DropdownButton>
    </g:FlowPanel>

    <b:TabPanel tabPosition="above" ui:field="tabPanel">
      <b:Tab heading="Dictionary" active="true">

        <g:FlowPanel>
          <b:Heading size="4" addStyleNames="inline-block">
            <ui:msg description="Properties label">Properties</ui:msg>
          </b:Heading>
          <b2:IconAnchor ui:field="edit" icon="EDIT" addStyleNames="small-indent">
          </b2:IconAnchor>
        </g:FlowPanel>

        <b:Row>
          <b:Column size="6">
            <o:PropertiesTable ui:field="propertiesTable" keyStyleNames="span3">
              <o:PropertyPanel>
                <g:Label>
                  <ui:msg description="Name label">Name</ui:msg>
                </g:Label>
                <g:Label ui:field="name"/>
              </o:PropertyPanel>
              <o:PropertyPanel>
                <g:Label>
                  <ui:msg description="Entity type label">Entity Type</ui:msg>
                </g:Label>
                <g:Label ui:field="entityType"/>
              </o:PropertyPanel>
            </o:PropertiesTable>
          </b:Column>
        </b:Row>

        <g:FlowPanel>
          <b:Heading size="4" addStyleNames="inline-block">
            <ui:msg description="Variables label">Variables</ui:msg>
          </b:Heading>
          <b:SimplePager ui:field="pager" location="RIGHT" addStyleNames="pull-right small-top-margin"/>
          <b:Controls addStyleNames="pull-right small-top-margin small-right-indent">
            <b:InputAddOn prependIcon="FILTER">
              <o:TextBoxClearable ui:field="filter" addStyleNames="inline-block"/>
            </b:InputAddOn>
          </b:Controls>
          <b:ButtonGroup addStyleNames="pull-right">
            <b:Button type="INFO" icon="PLUS" ui:field="addVariable"
                addStyleNames="small-right-indent small-top-margin">
              <ui:msg description="Add Variable label">Add Variable</ui:msg>
            </b:Button>
          </b:ButtonGroup>
        </g:FlowPanel>

        <g:FlowPanel>
          <b:Alert ui:field="selectAllItemsAlert" close="false" visible="false"
              addStyleNames="select">
            <g:Grid>
              <g:row>
                <g:customCell>
                  <g:Label ui:field="selectAllStatus" addStyleNames="inline"/>
                </g:customCell>
                <g:customCell>
                  <b2:IconAnchor ui:field="selectAllAnchor" addStyleNames="inline xsmall-indent"/>
                </g:customCell>
                <g:customCell>
                  <g:FlowPanel>

                    <b2:IconAnchor ui:field="clearSelectionAnchor" icon="REMOVE" visible="false"
                        addStyleNames="inline xsmall-indent">
                      <ui:msg description="Clear label">Clear</ui:msg>
                    </b2:IconAnchor>

                    <b2:IconAnchor ui:field="copyVariables" icon="PLUS_SIGN"
                        addStyleNames="inline xsmall-indent">
                      <ui:msg description="Add to variables to view label">Add variables to view</ui:msg>
                    </b2:IconAnchor>

                    <b2:IconAnchor ui:field="deleteVariables" icon="TRASH" addStyleNames="inline xsmall-indent">
                      <ui:msg description="Delete label">Delete</ui:msg>
                    </b2:IconAnchor>

                  </g:FlowPanel>
                </g:customCell>
              </g:row>
            </g:Grid>
          </b:Alert>
          <o:Table ui:field="table"/>
        </g:FlowPanel>
      </b:Tab>

      <b:Tab heading="Summary">
        <g:FlowPanel ui:field="indexStatus" addStyleNames="small-top-margin" visible="false">
          <b:Alert ui:field="indexStatusAlert" close="false" visible="true">

            <g:Grid>
              <g:row>
                <g:customCell styleName="top-aligned">
                  <g:Label ui:field="indexStatusText" addStyleNames="inline"/>
                </g:customCell>
                <g:customCell styleName="top-aligned">

                  <b:ProgressBar ui:field="progress" addStyleNames="xsmall-indent progress no-bottom-margin"/>
                </g:customCell>
                <g:customCell styleName="top-aligned">

                  <g:Anchor ui:field="clearIndexLink" addStyleNames="inline xsmall-indent action">Clear</g:Anchor>
                </g:customCell>
                <g:customCell styleName="top-aligned">

                  <g:Anchor ui:field="indexNowLink" addStyleNames="inline xsmall-indent action">Index now</g:Anchor>
                </g:customCell>
                <g:customCell styleName="top-aligned">

                  <g:Anchor ui:field="scheduleLink" addStyleNames="inline xsmall-indent action">Schedule indexing
                  </g:Anchor>
                </g:customCell>
                <g:customCell styleName="top-aligned">
                  <g:Anchor ui:field="cancelLink" addStyleNames="inline xsmall-indent action">Cancel</g:Anchor>
                </g:customCell>
              </g:row>
            </g:Grid>
          </b:Alert>
        </g:FlowPanel>

        <b:FluidRow addStyleNames="text-align-center">
          <b:Column size="4">
            <b:WellNavList>
              <b:NavLink icon="TIME" ui:field="timestamps">?</b:NavLink>
            </b:WellNavList>
          </b:Column>
          <b:Column size="4">
            <b:WellNavList>
              <b:NavLink icon="COLUMNS" ui:field="variableCount">? variables</b:NavLink>
            </b:WellNavList>
          </b:Column>
          <b:Column size="4">
            <b:WellNavList>
              <b:NavLink icon="USER" ui:field="entityCount">? entities</b:NavLink>
            </b:WellNavList>
          </b:Column>
        </b:FluidRow>

      </b:Tab>

      <b:Tab heading="Values">
        <g:SimplePanel ui:field="valuesPanel"/>
      </b:Tab>

      <b:Tab heading="Permissions">
        <g:SimplePanel ui:field="permissionsPanel"/>
      </b:Tab>

    </b:TabPanel>

  </g:FlowPanel>

</ui:UiBinder>