<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .titlebar { margin-top: 10px; }
    .title-bold { font-weight: bold; font-size: medium; }
    .title { font-size: small; }
    .title-light { color: gray; font-size: small; }
    .tableList td:first-child  {
      color: blue;
      text-decoration: underline;
    }
    .tableList td:first-child:hover {
      cursor: pointer;
    }
    .tableList .title-bold {
    	margin-top: 10px;
    }
    .toolbar-right img {
      margin-left: 5px;
      float: right;
    }
    .toolbar-left img {
      margin-right: 5px;
      float: left;
    }
    .toolbar {
    	margin: 10px;
    }
    .toolbar img:hover {
      cursor: pointer;
    }
    .toolbar a:hover {
      cursor: pointer;
    }
    .separator {
    	border-bottom:2px solid #BBBBBB;
    	margin-top:5px;
    	margin-bottom:5px;
    }
    .left-aligned { float : left; margin-right : 0.5em }
  </ui:style>

  <g:VerticalPanel width="100%" addStyleNames="navigator">
     <g:FlowPanel addStyleNames="small-indent {style.titlebar}">
       <g:Label addStyleNames="left-aligned {style.title-bold}" ui:field="variableName">Variable Name</g:Label>
       <g:Label addStyleNames="small-indent left-aligned {style.title}">(Variable)</g:Label>
     </g:FlowPanel>
      
     <g:FlowPanel>
       <g:FlowPanel addStyleNames="small-indent {style.toolbar} {style.toolbar-left}">
         <g:Image ui:field="parentImage" url="image/up.png"></g:Image>
         <g:Anchor ui:field="parentLink" addStyleNames="left-aligned">..</g:Anchor>
       </g:FlowPanel>
      
       <g:FlowPanel ui:field="toolbarPanel"  addStyleNames="small-indent {style.toolbar} {style.toolbar-right}">
         <g:Image ui:field="nextImage" url="image/next.png"></g:Image>
         <g:Image ui:field="previousImage" url="image/previous.png"></g:Image>
       </g:FlowPanel>
     </g:FlowPanel>
     
     <g:FlowPanel addStyleNames="{style.separator}"></g:FlowPanel>
     
     <g:HorizontalPanel width="97%" addStyleNames="small-indent">
	     <g:VerticalPanel>
	        <g:HorizontalPanel>
	          <g:Label addStyleNames="{style.title-light}"><ui:msg description="Entity type label">Entity Type</ui:msg>:</g:Label>
	          <g:Label addStyleNames="small-indent {style.title}" ui:field="entityType">Entity Name</g:Label>
	        </g:HorizontalPanel>
	        <g:HorizontalPanel>
	          <g:Label addStyleNames="{style.title-light}"><ui:msg description="Value Type label">Value Type</ui:msg>:</g:Label>
	          <g:Label addStyleNames="small-indent {style.title}" ui:field="valueType">Value Type Name</g:Label>
	        </g:HorizontalPanel>
	        <g:HorizontalPanel>
	          <g:Label addStyleNames="{style.title-light}"><ui:msg description="Unit label">Unit</ui:msg>:</g:Label>
	          <g:Label addStyleNames="small-indent {style.title}" ui:field="unit">Unit Name</g:Label>
	        </g:HorizontalPanel>
	     </g:VerticalPanel>
	     <g:VerticalPanel>
	        <g:HorizontalPanel>
	          <g:Label addStyleNames="{style.title-light}"><ui:msg description="Mime Type label">Mime Type</ui:msg>:</g:Label>
	          <g:Label addStyleNames="small-indent {style.title}" ui:field="mimeType">Mime Type Name</g:Label>
	        </g:HorizontalPanel>
	        <g:HorizontalPanel>
	          <g:Label addStyleNames="{style.title-light}"><ui:msg description="Repeatable label">Repeatable</ui:msg>:</g:Label>
	          <g:Label addStyleNames="small-indent {style.title}" ui:field="repeatable">Yes/No</g:Label>
	        </g:HorizontalPanel>
	        <g:HorizontalPanel>
	          <g:Label addStyleNames="{style.title-light}"><ui:msg description="Occurrence Group label">Occurrence Group</ui:msg>:</g:Label>
	          <g:Label addStyleNames="small-indent {style.title}" ui:field="occurrenceGroup">Occurrence Group Name</g:Label>
	        </g:HorizontalPanel>
	     </g:VerticalPanel>  
     </g:HorizontalPanel>
     
     <g:HorizontalPanel spacing="10">
       <g:Label addStyleNames="{style.title-light}"><ui:msg description="Label label">Label</ui:msg>:</g:Label>
       <g:Label addStyleNames="{style.title}" ui:field="label" />
     </g:HorizontalPanel>
     
     <g:TabLayoutPanel barHeight="2" barUnit="EM" width="97%" height="30em" addStyleNames="small-indent">
        <g:tab>
		  <g:customHeader>
		    <g:Label ui:field="categoryTableTitle" />
		  </g:customHeader>
          <g:ScrollPanel>
            <g:VerticalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
              <g2:CellTable width="100%" ui:field="categoryTable" />
            </g:VerticalPanel>
          </g:ScrollPanel>
	    </g:tab>
	    <g:tab>
		  <g:customHeader>
		    <g:Label ui:field="attributeTableTitle" />
		  </g:customHeader>
          <g:ScrollPanel>
            <g:VerticalPanel width="100%" horizontalAlignment="ALIGN_RIGHT">
              <g2:CellTable width="100%" ui:field="attributeTable" />
            </g:VerticalPanel>
          </g:ScrollPanel>
	    </g:tab>
     </g:TabLayoutPanel>
     
  </g:VerticalPanel>

</ui:UiBinder>
