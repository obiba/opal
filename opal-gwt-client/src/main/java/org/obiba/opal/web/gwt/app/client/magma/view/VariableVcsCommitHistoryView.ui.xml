<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>

    <g:FlowPanel>
      <b:Heading size="4" addStyleNames="inline-block">
        <ui:msg description="VCS Commit Info title label">Commit History</ui:msg>
      </b:Heading>
      <b:SimplePager ui:field="commitInfoTablePager" location="CENTER" addStyleNames="pull-right"/>
      <o:Table ui:field="commitInfoTable" addStyleNames="small-top-margin"/>
    </g:FlowPanel>

  </g:FlowPanel>

</ui:UiBinder>