<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>
    <g:FlowPanel ui:field="breadcrumbs"/>
    <g:FlowPanel addStyleNames="panel">
      <g:FlowPanel addStyleNames="title">
        <b:NavPills>
          <b:NavLink ui:field="usersLink" icon="USER">
            <ui:msg description="Users label">Users</ui:msg>
          </b:NavLink>
          <b:NavLink ui:field="groupsLink" icon="GROUP">
            <ui:msg description="Groups label">Groups</ui:msg>
          </b:NavLink>
        </b:NavPills>
      </g:FlowPanel>
    </g:FlowPanel>

    <g:FlowPanel addStyleNames="panel" ui:field="usersPanel">
      <g:FlowPanel>
        <g:InlineLabel>
          <ui:msg description="Manage users label">Manage locally defined users.</ui:msg>
        </g:InlineLabel>
        <g:HorizontalPanel addStyleNames="content">
          <b:Button icon="PLUS" size="SMALL">
            <ui:msg description="Add user button label">Add User</ui:msg>
          </b:Button>
        </g:HorizontalPanel>
        <g:VerticalPanel width="100%" addStyleNames="content">
          <b:SimplePager ui:field="indexTablePager" location="CENTER" addStyleNames="right-aligned"/>
          <b:CellTable width="100%" ui:field="usersTable" addStyleNames="small-top-margin" striped="true"
              condensed="true"/>
        </g:VerticalPanel>
      </g:FlowPanel>
    </g:FlowPanel>

    <g:FlowPanel addStyleNames="panel" ui:field="groupsPanel">
      <g:InlineLabel>
        <ui:msg description="Manage groups label">Manage locally defined groups.</ui:msg>
      </g:InlineLabel>
      <g:HorizontalPanel addStyleNames="content">
      </g:HorizontalPanel>
      <g:VerticalPanel width="100%" addStyleNames="content">
        <b:CellTable width="100%" ui:field="groupsTable" addStyleNames="small-top-margin" striped="true"
            condensed="true"/>
      </g:VerticalPanel>
    </g:FlowPanel>

  </g:FlowPanel>
</ui:UiBinder>