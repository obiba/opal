<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <g:HTMLPanel>
    <table>
      <tr>
        <td/>
        <td>
          <g:Label ui:field="titleMessage" addStyleNames="bold">
            <ui:msg description="Unhandled response notification title">Regrettably a system error has occurred</ui:msg>
          </g:Label>
        </td>
      </tr>
      <tr>
        <td/>
        <td>
          <g:Label ui:field="detailMessage" addStyleNames="message">
            <ui:msg description="Unhandled response notification message">Please notify your Opal administrator</ui:msg>
          </g:Label>
        </td>
      </tr>
      <tr>
        <td/>
        <td>
          <g:DisclosurePanel>
            <g:customHeader>
              <g:Label>
                <ui:msg description="More label">more</ui:msg>
              </g:Label>
            </g:customHeader>
            <g:ScrollPanel>
              <g:Label ui:field="errorMessage" addStyleNames="message detailedErrorMessage"></g:Label>
            </g:ScrollPanel>
          </g:DisclosurePanel>
        </td>
      </tr>

      <tr>
        <td/>
        <td>
          <g:Button ui:field="okay" styleName="btn">
            <ui:msg description="Okay button label">Okay</ui:msg>
          </g:Button>
        </td>
      </tr>
    </table>
  </g:HTMLPanel>
</ui:UiBinder>