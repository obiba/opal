<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
             ui:generateLocales="default">

    <g:FlowPanel>

        <g:FlowPanel addStyleNames="large-bottom-margin">
            <b:Paragraph>
                <ui:msg description="DS Profile reload description">Reset the DataSHIELD profile as it was originally defined by the DataSHIELD packages description.</ui:msg>
            </b:Paragraph>
            <b:Button ui:field="resetProfile" icon="REFRESH" type="INFO">
                <ui:msg description="DS Profile reset label">Reset Profile</ui:msg>
            </b:Button>
        </g:FlowPanel>

        <b:Heading size="5">
            <ui:msg description="DS Options label">Options</ui:msg>
        </b:Heading>
        <g:SimplePanel ui:field="optionsPanel"/>

        <b:Heading size="5">
            <ui:msg description="DS Methods label">Methods</ui:msg>
        </b:Heading>
        <o:NavTabsPanel ui:field="tabs" addStyleNames="top-margin">

            <g:Anchor>
                <ui:msg description="Aggregate label">Aggregate</ui:msg>
            </g:Anchor>

            <g:SimplePanel ui:field="aggregatePanel"/>

            <g:Anchor>
                <ui:msg description="Assign label">Assign</ui:msg>
            </g:Anchor>

            <g:SimplePanel ui:field="assignPanel"/>

        </o:NavTabsPanel>

    </g:FlowPanel>
</ui:UiBinder>