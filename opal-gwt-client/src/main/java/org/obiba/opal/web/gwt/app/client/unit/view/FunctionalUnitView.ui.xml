<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">


  <g:FlowPanel>
    <g:FlowPanel ui:field="breadcrumbs" />
    <g:FlowPanel>
      <g:FlowPanel styleName="btn-group">
        <g:Button ui:field="functionalUnitButton" styleName="btn iconb i-plus">
          <ui:msg description="Add Functional Unit label">Add Unit</ui:msg>
        </g:Button>
        <g:Button ui:field="exportButton" styleName="btn iconb i-down">
          <ui:msg description="Export All Identifiers label">Export All Identifiers</ui:msg>
        </g:Button>
        <g:Button ui:field="importButton" styleName="btn iconb i-move">
          <ui:msg description="Map Identifiers label">Map Identifiers</ui:msg>
        </g:Button>
        <g:Button ui:field="syncButton" styleName="btn iconb i-reblog">
          <ui:msg description="Sync Identifiers label">Synchronize Identifiers</ui:msg>
        </g:Button>
      </g:FlowPanel>
      <o:HelpImage page="Working+with+Units"></o:HelpImage>
    </g:FlowPanel>
    <g:SplitLayoutPanel>
      <g:center>
        <g:ScrollPanel width="100%" ui:field="functionalUnitDetailsPanel"/>
      </g:center>
      <g:west size='240'>
        <g:ScrollPanel ui:field="functionalUnitListPanel"/>
      </g:west>
    </g:SplitLayoutPanel>
  </g:FlowPanel>

</ui:UiBinder>