<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:c="urn:import:com.google.gwt.user.cellview.client"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel width="100%" addStyleNames="navigator">
    <g:FlowPanel addStyleNames="titlebar">
      <g:Label addStyleNames="title" ui:field="tableName">Table Name</g:Label>
      <g:Label addStyleNames="small-indent" ui:field="tableOrView">(View)</g:Label>
    </g:FlowPanel>

    <g:FlowPanel ui:field="toolbarPanel" addStyleNames="toolbar toolbar-left">
      <o:DefaultSuggestBox ui:field="variableNameSuggestBox" defaultSuggestionsEnabled="false"
          addStyleNames="right-aligned ui-corner-all"/>
    </g:FlowPanel>

    <o:PropertiesTable condensed="true" borderedCell="false" zebra="true" addStyleNames="small-dual-indent top-margin"
        keyStyleNames="span2 small-indent">
      <g:FlowPanel>
        <g:Label>
          <ui:msg description="Entity type label">Entity Type</ui:msg>
        </g:Label>
        <g:Label ui:field="entityType"/>
      </g:FlowPanel>
      <g:FlowPanel>
        <g:Label>
          <ui:msg description="Current Entity Count label">Current Number of Entity</ui:msg>
        </g:Label>
        <g:Label ui:field="entityCount"/>
      </g:FlowPanel>
    </o:PropertiesTable>

    <!--<g:HorizontalPanel ui:field="indexStatus" addStyleNames="small-dual-indent top-margin">-->
    <g:FlowPanel ui:field="indexStatus" addStyleNames="small-dual-indent top-margin">
      <b:Alert ui:field="indexStatusAlert" close="false">

        <g:Label ui:field="indexStatusText" addStyleNames="inline"></g:Label>
        <b:ProgressBar ui:field="progress" addStyleNames="indexStatusProgressBar"></b:ProgressBar>
        <g:Anchor ui:field="clearIndexLink" addStyleNames="inline indexStatusAction">Clear</g:Anchor>
        <g:Anchor ui:field="indexNowLink" addStyleNames="inline indexStatusAction">Index now</g:Anchor>
        <g:Anchor ui:field="scheduleLink" addStyleNames="inline indexStatusAction">Schedule indexing</g:Anchor>
        <g:Anchor ui:field="cancelLink" addStyleNames="inline indexStatusAction">Cancel</g:Anchor>

      </b:Alert>


      <!--</g:HorizontalPanel>-->
    </g:FlowPanel>

    <o:HorizontalTabLayout ui:field="tabs" addStyleNames="small-dual-indent top-margin">
      <g:Anchor>
        <ui:msg description="Variables label">Variables</ui:msg>
      </g:Anchor>
      <g:FlowPanel>
        <g:InlineLabel ui:field="noVariables">
          <ui:msg description="No Variables label">No Variables</ui:msg>
        </g:InlineLabel>
        <c:SimplePager ui:field="pager" location="CENTER" addStyleNames="right-aligned"/>
        <o:Table ui:field="table" width="100%" addStyleNames="left-aligned"/>
      </g:FlowPanel>

      <g:Anchor>
        <ui:msg description="Values label">Values</ui:msg>
      </g:Anchor>
      <g:SimplePanel ui:field="values"></g:SimplePanel>

      <g:Anchor>
        <ui:msg description="Permissions label">Permissions</ui:msg>
      </g:Anchor>
      <g:SimplePanel ui:field="permissions"></g:SimplePanel>

    </o:HorizontalTabLayout>

  </g:FlowPanel>

</ui:UiBinder>