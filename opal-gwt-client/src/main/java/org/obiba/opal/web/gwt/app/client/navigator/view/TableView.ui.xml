<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:c="urn:import:com.google.gwt.user.cellview.client"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel width="100%" addStyleNames="navigator">
    <g:FlowPanel addStyleNames="titlebar">
      <g:Label addStyleNames="title" ui:field="tableName">Table Name</g:Label>
      <g:Label addStyleNames="small-indent" ui:field="tableOrView">(View)</g:Label>
    </g:FlowPanel>

    <g:FlowPanel ui:field="toolbarPanel" addStyleNames="toolbar toolbar-left"/>

    <g:FlowPanel ui:field="indexStatus" addStyleNames="index-status" visible="false">
      <b:Alert ui:field="indexStatusAlert" close="false" visible="false">

        <g:Grid>
          <g:row>
            <g:customCell styleName="top-aligned">
              <g:Label ui:field="indexStatusText" addStyleNames="inline"></g:Label>
            </g:customCell>
            <g:customCell styleName="top-aligned">

              <b:ProgressBar ui:field="progress" addStyleNames="xsmall-indent progress"></b:ProgressBar>
            </g:customCell>
            <g:customCell styleName="top-aligned">

              <g:Anchor ui:field="clearIndexLink" addStyleNames="inline xsmall-indent action">Clear</g:Anchor>
            </g:customCell>
            <g:customCell styleName="top-aligned">

              <g:Anchor ui:field="indexNowLink" addStyleNames="inline xsmall-indent action">Index now</g:Anchor>
            </g:customCell>
            <g:customCell styleName="top-aligned">

              <g:Anchor ui:field="scheduleLink" addStyleNames="inline xsmall-indent action">Schedule indexing</g:Anchor>
            </g:customCell>
            <g:customCell styleName="top-aligned">
              <g:Anchor ui:field="cancelLink" addStyleNames="inline xsmall-indent action">Cancel</g:Anchor>
            </g:customCell>
          </g:row>
        </g:Grid>
      </b:Alert>

    </g:FlowPanel>


    <o:PropertiesTable condensed="true" borderedCell="false" zebra="true" addStyleNames="small-dual-indent top-margin"
        keyStyleNames="span3 small-indent">
      <g:FlowPanel>
        <g:Label>
          <ui:msg description="Entity type label">Entity Type</ui:msg>
        </g:Label>
        <g:Label ui:field="entityType"/>
      </g:FlowPanel>
      <g:FlowPanel>
        <g:Label>
          <ui:msg description="Current Entity Count label">Current Number of Entity</ui:msg>
        </g:Label>
        <g:Label ui:field="entityCount"/>
      </g:FlowPanel>
    </o:PropertiesTable>

    <o:PropertiesTable ui:field="fromTable" condensed="true" borderedCell="false" zebra="true"
        addStyleNames="small-dual-indent"
        keyStyleNames="span3 small-indent">
      <g:FlowPanel>
        <g:Label ui:field="fromTableLabel">
          <ui:msg description="From table label">Tables included in the view</ui:msg>
        </g:Label>
        <g:FlowPanel ui:field="fromTableLinks"/>
      </g:FlowPanel>
    </o:PropertiesTable>

    <o:HorizontalTabLayout ui:field="tabs" addStyleNames="small-dual-indent top-margin">
      <g:Anchor>
        <ui:msg description="Variables label">Variables</ui:msg>
      </g:Anchor>
      <g:FlowPanel>
        <g:InlineLabel ui:field="noVariables">
          <ui:msg description="No Variables label">No Variables</ui:msg>
        </g:InlineLabel>

        <b:Controls addStyleNames="left-aligned">
          <b:InputAddOn prependIcon="FILTER">
            <b:TextBox ui:field="filter"></b:TextBox>
          </b:InputAddOn>
        </b:Controls>

        <c:SimplePager ui:field="pager" location="CENTER" addStyleNames="right-aligned"/>
        <b:Alert ui:field="selectAllItemsAlert" close="false" visible="false"
            addStyleNames="block clear select-all-variables">
          <g:Grid>
            <g:row>
              <g:customCell styleName="top-aligned">
                <g:Label ui:field="selectAllStatus" addStyleNames="inline"></g:Label>
              </g:customCell>
              <g:customCell styleName="top-aligned">
                <g:Anchor ui:field="selectAllAnchor" addStyleNames="inline xsmall-indent action"></g:Anchor>
              </g:customCell>
              <g:customCell styleName="top-aligned">
                <g:Anchor ui:field="clearSelectionAnchor" visible="false" addStyleNames="inline xsmall-indent action">
                  <ui:msg description="Clear selection label">Clear selection</ui:msg>
                </g:Anchor>
              </g:customCell>
              <g:customCell styleName="top-aligned">
                <g:FlowPanel addStyleNames="indent">
                  <b:Icon type="PLUS_SIGN"/>
                  <g:Anchor ui:field="copyVariables" addStyleNames="inline xsmall-indent action">
                    <ui:msg description="Add to view... label">Add to view...</ui:msg>
                  </g:Anchor>
                </g:FlowPanel>
              </g:customCell>
            </g:row>
          </g:Grid>
        </b:Alert>
        <o:Table ui:field="table" width="100%" addStyleNames="left-aligned first-column-checkbox"/>
      </g:FlowPanel>

      <g:Anchor>
        <ui:msg description="Values label">Values</ui:msg>
      </g:Anchor>
      <g:SimplePanel ui:field="values"></g:SimplePanel>

      <g:Anchor>
        <ui:msg description="Permissions label">Permissions</ui:msg>
      </g:Anchor>
      <g:SimplePanel ui:field="permissions"></g:SimplePanel>

    </o:HorizontalTabLayout>

  </g:FlowPanel>

</ui:UiBinder>