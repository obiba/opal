<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:b2="urn:import:com.github.gwtbootstrap.client.ui.base"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
             ui:generateLocales="default">

  <g:FlowPanel>

    <g:FlowPanel ui:field="noVcfServiceAlertPanel">
      <g:FlowPanel addStyleNames="clearfix"/>
      <b:Alert>
        <ui:msg description="No VCF Store Service configured message">No VCF Store Service configured for this project. Configure it, if present, in the project's administration page.</ui:msg>
      </b:Alert>
    </g:FlowPanel>

    <g:FlowPanel ui:field="genotypesContentPanel">
      <g:FlowPanel>
        <g:FlowPanel addStyleNames="clearfix"/>

        <g:FlowPanel addStyleNames="container-fluid no-padding-left no-padding-right">
          <g:FlowPanel addStyleNames="no-left-margin pull-left" width="45%">
            <g:FlowPanel>
              <b:Heading size="4" addStyleNames="inline-block small-top-margin">
                <ui:msg description="Genotypes Genotypes Summary label">Summary</ui:msg>
              </b:Heading>
            </g:FlowPanel>

            <o:PropertiesTable keyStyleNames="span2">
              <o:PropertyPanel>
                <g:Label>
                  <ui:msg description="Genotypes Participants label">Participants</ui:msg>
                </g:Label>
                <g:Label ui:field="participants"/>
              </o:PropertyPanel>
              <o:PropertyPanel>
                <g:Label>
                  <ui:msg description="Genotypes Participants with Genotypes label">Participants with Genotype</ui:msg>
                </g:Label>
                <g:Label ui:field="participantsWithGenotype"/>
              </o:PropertyPanel>
              <o:PropertyPanel>
                <g:Label>
                  <ui:msg description="Genotypes Samples label">Samples</ui:msg>
                </g:Label>
                <g:Label ui:field="samples"/>
              </o:PropertyPanel>
              <o:PropertyPanel>
                <g:Label>
                  <ui:msg description="Genotypes Control Samples label">Control Samples</ui:msg>
                </g:Label>
                <g:Label ui:field="controlSamples"/>
              </o:PropertyPanel>
            </o:PropertiesTable>
          </g:FlowPanel>

          <g:FlowPanel addStyleNames="no-left-margin pull-right" width="45%">
            <g:FlowPanel>
              <b:Heading size="4" addStyleNames="inline-block small-top-margin">
                <ui:msg description="Genotypes Mapping Table label">Samples-Participants Mapping</ui:msg>
              </b:Heading>
              <b2:IconAnchor ui:field="editMapping" icon="EDIT" addStyleNames="small-indent">
              </b2:IconAnchor>
              <b2:IconAnchor ui:field="addMapping" icon="PLUS_SIGN_ALT" addStyleNames="small-indent">
              </b2:IconAnchor>
            </g:FlowPanel>

          <o:PropertiesTable keyStyleNames="span2">
            <g:FlowPanel>
              <g:Label>
                <ui:msg description="Genotypes Table label">Table</ui:msg>
              </g:Label>
              <g:FlowPanel>
                <g:Anchor ui:field="tableLink"></g:Anchor>
              </g:FlowPanel>
            </g:FlowPanel>
            <g:FlowPanel>
              <g:Label>
                <ui:msg description="Genotypes Participant ID label">Participant ID</ui:msg>
              </g:Label>
              <g:Label ui:field="participantId"/>
            </g:FlowPanel>
            <g:FlowPanel>
              <g:Label>
                <ui:msg description="Genotypes Sample Role label">Sample Role</ui:msg>
              </g:Label>
              <g:Label ui:field="sampleRole"/>
            </g:FlowPanel>
          </o:PropertiesTable>
        </g:FlowPanel>
      </g:FlowPanel>
    </g:FlowPanel>

      <g:FlowPanel>
        <g:FlowPanel addStyleNames="container-fluid no-padding-left no-padding-right">
          <g:FlowPanel addStyleNames="small-bottom-margin">
            <b:Heading size="4" addStyleNames="inline-block small-top-margin">
              <ui:msg description="Genotypes Mapping Table title label">VCF Files</ui:msg>
            </b:Heading>
          </g:FlowPanel>

          <g:FlowPanel>
            <g:FlowPanel addStyleNames="span4 pull-left no-left-margin">
              <b:Button icon="UPLOAD_ALT" ui:field="importVCF">
                <ui:msg description="Genotypes Import vcfFile label">Import</ui:msg>
              </b:Button>

              <b:Button icon="DOWNLOAD_ALT" ui:field="downloadVCF" addStyleNames="small-indent">
                <ui:msg description="Genotypes Download vcfFile label">Export</ui:msg>
              </b:Button>

              <b:Button icon="TRASH" visible="true" ui:field="deleteAll" addStyleNames="small-indent">
              </b:Button>
            </g:FlowPanel>

            <g:FlowPanel addStyleNames="span4 pull-left no-left-margin">
              <o:OpalSimplePager ui:field="tablePager" location="RIGHT" addStyleNames="pull-left"/>
            </g:FlowPanel>

            <g:FlowPanel addStyleNames="span4 pull-right no-left-margin" ui:field="filterPanel">
              <b:Controls>
                <b:InputAddOn prependIcon="FILTER" addStyleNames="pull-right">
                  <o:TextBoxClearable ui:field="filter" addStyleNames="inline-block"/>
                </b:InputAddOn>
              </b:Controls>
            </g:FlowPanel>
          </g:FlowPanel>
        </g:FlowPanel>

        <g:FlowPanel>
          <b:Alert ui:field="selectAllItemsAlert" close="false" visible="false" addStyleNames="actions-select">

            <g:FlowPanel addStyleNames="pull-left">
              <b2:IconAnchor ui:field="deleteLink" icon="TRASH" addStyleNames="inline xsmall-indent">
                <ui:msg description="Remove category label">Remove</ui:msg>
              </b2:IconAnchor>
            </g:FlowPanel>

            <g:FlowPanel addStyleNames="pull-right">
              <g:Label ui:field="selectAllStatus" addStyleNames="inline"/>
              <b2:IconAnchor ui:field="selectAllAnchor" icon="CHECK" addStyleNames="inline small-indent"/>
              <b2:IconAnchor ui:field="clearSelectionAnchor" icon="REMOVE" visible="false"
                             addStyleNames="inline small-indent">
                <ui:msg description="Clear label">Clear</ui:msg>
              </b2:IconAnchor>
            </g:FlowPanel>

          </b:Alert>

          <b:Alert ui:field="selectItemTipsAlert" close="false" visible="true" addStyleNames="alert-info actions-select">
            <g:Label>
              <ui:msg description="Select vcf files tips label">Select VCF files to export or remove.</ui:msg>
            </g:Label>
          </b:Alert>
        </g:FlowPanel>

        <o:Table ui:field="vcfFilesTable"/>
      </g:FlowPanel>
    </g:FlowPanel>


  </g:FlowPanel>

</ui:UiBinder>
