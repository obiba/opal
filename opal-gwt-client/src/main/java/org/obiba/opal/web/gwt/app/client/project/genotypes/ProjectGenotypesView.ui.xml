<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
             ui:generateLocales="default">

  <g:FlowPanel>
    <g:FlowPanel>
      <b:Row>
        <b:Column size="6" addStyleNames="pull-left">
          <g:FlowPanel>
            <b:Heading size="4" addStyleNames="inline-block small-top-margin">
              <ui:msg description="Genotypes Genotypes Summary label">Summary</ui:msg>
            </b:Heading>
          </g:FlowPanel>

          <o:PropertiesTable keyStyleNames="span2">
            <o:PropertyPanel>
              <g:Label>
                <ui:msg description="Genotypes Participants label">Participants</ui:msg>
              </g:Label>
              <g:Label ui:field="participants"/>
            </o:PropertyPanel>
            <o:PropertyPanel>
              <g:Label>
                <ui:msg description="Genotypes Participants with Genotypes label">Participants with Genotype</ui:msg>
              </g:Label>
              <g:Label ui:field="participantsWithGenotypes"/>
            </o:PropertyPanel>
            <o:PropertyPanel>
              <g:Label>
                <ui:msg description="Genotypes Samples label">Samples</ui:msg>
              </g:Label>
              <g:Label ui:field="samples"/>
            </o:PropertyPanel>
            <o:PropertyPanel>
              <g:Label>
                <ui:msg description="Genotypes Control Samples label">Control Samples</ui:msg>
              </g:Label>
              <g:Label ui:field="controlSamples"/>
            </o:PropertyPanel>
          </o:PropertiesTable>
        </b:Column>

        <b:Column size="5" addStyleNames="pull-right">
          <g:FlowPanel>
            <b:Heading size="4" addStyleNames="inline-block small-top-margin">
              <ui:msg description="Genotypes Mapping Table label">Mapping Table</ui:msg>
            </b:Heading>

            <b:Button ui:field="editMapping" addStyleNames="pull-right">
              <ui:msg description="Genotypes Edit Mapping Table label">Edit</ui:msg>
            </b:Button>
          </g:FlowPanel>

          <o:PropertiesTable keyStyleNames="span2">
            <o:PropertyPanel>
              <g:Label>
                <ui:msg description="Genotypes Project label">Project</ui:msg>
              </g:Label>
              <g:Label ui:field="project"/>
            </o:PropertyPanel>
            <o:PropertyPanel>
              <g:Label>
                <ui:msg description="Genotypes Table label">Table</ui:msg>
              </g:Label>
              <g:Label ui:field="table"/>
            </o:PropertyPanel>
            <o:PropertyPanel>
              <g:Label>
                <ui:msg description="Genotypes Participant ID label">Participant ID</ui:msg>
              </g:Label>
              <g:Label ui:field="participantId"/>
            </o:PropertyPanel>
            <o:PropertyPanel>
              <g:Label>
                <ui:msg description="Genotypes Sample ID label">Sample ID</ui:msg>
              </g:Label>
              <g:Label ui:field="sampleId"/>
            </o:PropertyPanel>
            <o:PropertyPanel>
              <g:Label>
                <ui:msg description="Genotypes Sample Role label">Sample Role</ui:msg>
              </g:Label>
              <g:Label ui:field="sampleRole"/>
            </o:PropertyPanel>
          </o:PropertiesTable>
        </b:Column>
      </b:Row>
    </g:FlowPanel>

    <b:Button icon="UPLOAD" ui:field="importVCF" addStyleNames="pull-left">
      <ui:msg description="Genotypes Import vcfFile label">Import VCF Files</ui:msg>
    </b:Button>

    <g:FlowPanel>
      <b:Button icon="DOWNLOAD" ui:field="downloadVCF" addStyleNames="pull-right">
        <ui:msg description="Genotypes Download vcfFile label">Download VCF Files</ui:msg>
      </b:Button>

      <o:OpalSimplePager ui:field="tablePager" location="RIGHT" addStyleNames="pull-right small-indent"/>

      <b:Controls addStyleNames="pull-right">
        <b:InputAddOn prependIcon="FILTER">
          <o:TextBoxClearable ui:field="filter" addStyleNames="inline-block"/>
        </b:InputAddOn>
      </b:Controls>
    </g:FlowPanel>

    <o:Table ui:field="vcfFilesTable" addStyleNames="small-top-margin"/>
  </g:FlowPanel>

</ui:UiBinder>
