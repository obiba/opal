<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view" 
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  <o:WizardDialogBox ui:field="dialog" autoHide="false" modal="true" height="30em" width="40em">
    <g:caption>
      <ui:msg description="Data export title">Export Data</ui:msg>
    </g:caption>
    <g:FlowPanel>
    
      <o:WizardStep ui:field="tablesStep">
        <g:SimplePanel ui:field="tablesPanel" />
      </o:WizardStep>
      
      <o:WizardStep ui:field="destinationStep">
        <g:FlowPanel>
          <g:FlowPanel styleName="input">
            <g:Label addStyleNames="key"><ui:msg description="File format field">Format</ui:msg></g:Label>
            <g:ListBox ui:field="fileFormat">
	          <g:item value="csv">CSV</g:item>
	          <g:item value="excel">Excel (xls,xlsx)</g:item>
	          <g:item value="xml">XML (zip)</g:item>
	        </g:ListBox>
          </g:FlowPanel>
          <g:FlowPanel styleName="input">
            <g:Label addStyleNames="key"><ui:msg description="File field">File</ui:msg></g:Label>
            <g:SimplePanel ui:field="filePanel"/>
          </g:FlowPanel>
          <g:FlowPanel styleName="input">
            <g:Label addStyleNames="key"><ui:msg description="Options title">Options</ui:msg></g:Label>
            <g:CheckBox ui:field="useAlias"><ui:msg description="Use alias to rename variable checkbox label">use 'alias' attribute to rename variables</ui:msg></g:CheckBox>
          </g:FlowPanel>
        </g:FlowPanel>
      </o:WizardStep>
      
      <o:WizardStep ui:field="unitStep">
        <g:FlowPanel>
          <g:Label ui:field="noUnitSelection" visible="false" addStyleNames="indent"><ui:msg description="Not Applicable label">Not Applicable.</ui:msg></g:Label>
          <g:Label ui:field="noUnitLabel" visible="false" addStyleNames="indent"><ui:msg description="Participant Opal identifiers in file label">The participant identifiers in the file will be used as-is (no unit is defined).</ui:msg></g:Label>
          <g:FlowPanel ui:field="unitSelection">
            <g:FlowPanel styleName="input">
              <g:RadioButton name="idGroup" ui:field="opalId"><ui:msg description="Use opal id radio button label">use Opal ID</ui:msg></g:RadioButton>
            </g:FlowPanel>
            <g:FlowPanel styleName="input">
              <g:RadioButton name="idGroup" ui:field="unitId"><ui:msg description="Unit id dropdown label">use Unit ID:</ui:msg></g:RadioButton>
	          <g:ListBox ui:field="units" addStyleNames="small-indent"/>
            </g:FlowPanel>
          </g:FlowPanel>
	    </g:FlowPanel>
      </o:WizardStep>
      
	  <o:WizardStep ui:field="conclusionStep">
	    <g:Label addStyleNames="p"><ui:msg description="Data export job">The data exportation process can be followed using the Job ID:</ui:msg></g:Label>
		<g:Anchor ui:field="jobLink" addStyleNames="large-indent">Job ID</g:Anchor>
	  </o:WizardStep>
	  
	  <g:HTMLPanel ui:field="destinationHelpPanel">
       <g:Label addStyleNames="title"><ui:msg description="File destination label">File Destination</ui:msg></g:Label>
        
       <p><ui:msg description="File destination information">The data can be exported in file. The file will be outputed on the server side in a directory you will have selected. Once successfully exported, you will download the resulting output from the [Opal file system]. Depending on the file format selected, some limits applies:</ui:msg></p>
       <ul>
         <li>CSV
           <br/>
           <ui:msg description="File destination information csv">Select the file according to the export options (Zip output is not supported yet).</ui:msg>
           <ul>
             <li><ui:msg description="File destination information csv directory output">Select a directory when exporting several tables or when exporting both variables and values. Each sub-directory will contain the data for one table.</ui:msg></li>
             <li><ui:msg description="File destination information csv file output">Select a CSV file when exporting only values of one table.</ui:msg></li>
           </ul>
         </li>
         <li>Excel
           <br/>
           <ui:msg description="File destination information excel">Use respectively .xls/.xlsx file suffix to distinguish Excel formats 97/2007.</ui:msg>
           <ul>
             <li><ui:msg description="File destination information excel max table name length">Maximum length of table name: 30</ui:msg></li>
             <li><ui:msg description="File destination information excel max number of variables">Maximum number of variables: 256/16K</ui:msg></li>
             <li><ui:msg description="File destination information excel max number of participants">Maximum number of participants: 16K/1M</ui:msg></li>
             <li><ui:msg description="File destination information excel binary data">Binary data are not suported</ui:msg></li>    
           </ul>
         </li>
         <li>XML
           <br/>
           <ui:msg description="File destination information xml">This format does not lost information. Resulting file set is available as a Zip file.</ui:msg>
         </li>
       </ul>
     </g:HTMLPanel>
     
     <g:HTMLPanel ui:field="unitHelpPanel">
       <g:Label addStyleNames="title"><ui:msg description="Participant Identifier label">Participant Identifier</ui:msg></g:Label>
       <p><ui:msg description="Participant Identifier information">Different strategies can be applied with the exported participant identifiers:</ui:msg></p>
       <ul>
         <li><ui:msg description="Participant Identifier information opal">Use Opal participant identifier.</ui:msg></li>
         <li><ui:msg description="Participant Identifier information unit">Switch the participant identifier to one that is specific to destination unit. To achieve that, select a 'unit' that has been predefined in your Opal system.</ui:msg></li>
       </ul>
     </g:HTMLPanel>
     
    </g:FlowPanel>
    
  </o:WizardDialogBox>
    
</ui:UiBinder>
