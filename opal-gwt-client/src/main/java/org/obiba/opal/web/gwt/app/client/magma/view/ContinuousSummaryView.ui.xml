<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .plot {
    width: 400px;
    float: left;
    margin-right: 2em
    }
  </ui:style>

  <g:FlowPanel>
    <b:TabPanel tabPosition="left" ui:field="tabPanel">
      <b:Tab icon="BAR_CHART" active="true">
        <g:HTMLPanel>
          <div id="plot-container">
            <div ui:field="histogramElement" class="{style.plot}" style="width:400px">
              <g:SimplePanel ui:field="histogramPanel"/>
            </div>
            <div ui:field="qqPlotElement" class="{style.plot}" style="width:400px">
              <g:SimplePanel ui:field="normalProbability"/>
            </div>
          </div>
        </g:HTMLPanel>
      </b:Tab>
      <b:Tab icon="TABLE">
        <o:DefaultFlexTable ui:field="grid" addStyleNames="span4"/>
      </b:Tab>
    </b:TabPanel>

  </g:FlowPanel>

</ui:UiBinder>