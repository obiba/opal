<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <o:Modal ui:field="dialog" resizable="true" closeVisible="true" keyboard="true" animation="false">
    <b:ControlGroup>
      <b:Controls>
        <b:ControlLabel addStyleNames="key">
          <ui:msg description="Index Schedule type label">Check index for update</ui:msg>
        </b:ControlLabel>
        <o:Chooser name="type" ui:field="type"/>
        <b:ControlLabel addStyleNames="Index Schedule on" ui:field="on">
          <ui:msg description="on">on</ui:msg>
        </b:ControlLabel>
        <o:Chooser name="day" ui:field="day"/>
        <b:ControlLabel addStyleNames="key" ui:field="at">
          <ui:msg description="Index Schedule at">at</ui:msg>
        </b:ControlLabel>
        <o:Chooser name="hour" ui:field="hour"/>
        <o:Chooser name="minutes" ui:field="minutes"/>
      </b:Controls>
    </b:ControlGroup>

    <b:ModalFooter>
      <b:Button ui:field="saveButton" type="PRIMARY">
        <ui:msg description="Index Save button label">Save</ui:msg>
      </b:Button>
      <b:Button ui:field="cancelButton">
        <ui:msg description="Index Cancel button label">Cancel</ui:msg>
      </b:Button>
    </b:ModalFooter>
  </o:Modal>

</ui:UiBinder>