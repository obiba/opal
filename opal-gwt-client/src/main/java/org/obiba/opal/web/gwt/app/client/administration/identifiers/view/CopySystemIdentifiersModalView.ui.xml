<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <o:Modal ui:field="dialog" resizable="true" closeVisible="true" keyboard="true" animation="false" minHeight="450">
    <g:FlowPanel>
      <!--Table references-->
      <b:ControlGroup ui:field="tablesGroup">
        <b:ControlLabel>
          <ui:msg description="Table label">Table</ui:msg>
          <o:RequiredIcon/>
        </b:ControlLabel>
        <b:Controls>
          <o:TableChooser ui:field="tableChooser" isMultipleSelect="false"/>
        </b:Controls>
        <b:HelpBlock>
          <ui:msg description="Table identifiers copy help">The table which entity identifiers will be copied as system
            identifiers. New identifiers will be added, existing ones will be ignored.
          </ui:msg>
        </b:HelpBlock>
      </b:ControlGroup>
    </g:FlowPanel>

    <b:ModalFooter>
      <b:Button ui:field="saveButton" type="PRIMARY">
        <ui:msg description="Submit label">Submit</ui:msg>
      </b:Button>
      <b:Button ui:field="closeButton">
        <ui:msg description="Cancel label">Cancel</ui:msg>
      </b:Button>
    </b:ModalFooter>

  </o:Modal>

</ui:UiBinder>