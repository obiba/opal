<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>
    <g:FlowPanel addStyleNames="page-header">
      <b:Breadcrumbs ui:field="breadcrumbs"/>
    </g:FlowPanel>
    <b:FluidRow>
      <b:Column size="12">
        <b:FluidRow>
          <b:Column size="9">
            <b:Heading size="4" ui:field="vocabularyName" addStyleNames="inline-block"/>
          </b:Column>
          <b:Column size="3" addStyleNames="pull-right">
            <!--<b:ButtonGroup addStyleNames="pull-right">-->
            <b:Button type="INFO" size="SMALL" icon="SAVE" addStyleNames="xsmall-indent" ui:field="saveVocabulary">
              <ui:msg description="Save">Save</ui:msg>
            </b:Button>
            <b:Button size="SMALL" addStyleNames="xsmall-indent" ui:field="cancelVocabulary">
              <ui:msg description="Cancel">Cancel</ui:msg>
            </b:Button>
            <!--</b:ButtonGroup>-->
          </b:Column>
        </b:FluidRow>
      </b:Column>
    </b:FluidRow>
    <b:FluidRow>
      <b:Column size="12">
        <b:Form type="HORIZONTAL">
          <!--Name-->
          <b:ControlGroup><!--ui:field="nameGroup"-->
            <b:ControlLabel>Name</b:ControlLabel>
            <b:Controls>
              <b:TextBox ui:field="name"/>
            </b:Controls>
          </b:ControlGroup>

          <!--Taxonomies-->
          <b:ControlGroup><!--ui:field="nameGroup"-->
            <b:ControlLabel>Taxonomies</b:ControlLabel>
            <b:Controls>
              <o:Chooser ui:field="taxonomies"/>
            </b:Controls>
          </b:ControlGroup>

          <!--Titles -->
          <b:ControlGroup>
            <b:ControlLabel>Title</b:ControlLabel>
            <b:Controls>
              <g:FlowPanel ui:field="vocabularyTitles"/>
            </b:Controls>
          </b:ControlGroup>

          <!--Descriptions-->
          <b:ControlGroup>
            <b:ControlLabel>Description</b:ControlLabel>
            <b:Controls>
              <g:FlowPanel ui:field="vocabularyDescriptions"/>
            </b:Controls>
          </b:ControlGroup>

          <!--Repeatable-->
          <b:ControlGroup>
            <b:ControlLabel>Repeatable</b:ControlLabel>
            <b:Controls>
              <b:CheckBox ui:field="repeatable"/>
            </b:Controls>
          </b:ControlGroup>
        </b:Form>

      </b:Column>
    </b:FluidRow>

    <b:FluidRow>
      <b:Column size="12">
        <b:Heading size="4" addStyleNames="inline-block">Terms</b:Heading>
      </b:Column>
    </b:FluidRow>

    <b:FluidRow>
      <b:Column size="6">
        <g:FlowPanel ui:field="termsEditionPanel">
          <b:TextBox width="20" ui:field="newTermName" addStyleNames="inline-block"/>
          <b:Button size="SMALL" icon="PLUS" addStyleNames="xsmall-indent" ui:field="addChild">
            <ui:msg description="Add Child">Add Child</ui:msg>
          </b:Button>
          <b:Button size="SMALL" addStyleNames="xsmall-indent" ui:field="addSibling">
            <ui:msg description="Add Sibling">Add Sibling</ui:msg>
          </b:Button>
        </g:FlowPanel>
        <g:FlowPanel ui:field="termsPanel" addStyleNames="items"/>
      </b:Column>
      <b:Column size="6">
        <b:FluidRow>
          <b:Column size="9">
            <b:Heading size="4" addStyleNames="inline-block, no-top-margin" ui:field="termTitle"/>
          </b:Column>
        </b:FluidRow>
        <b:FluidRow>
          <b:Column size="12">
            <g:FlowPanel ui:field="termPanel" visible="false">
              <b:Form type="HORIZONTAL">
                <!--Name-->
                <b:ControlGroup><!--ui:field="nameGroup"-->
                  <b:ControlLabel>Name</b:ControlLabel>
                  <b:Controls>
                    <b:TextBox ui:field="termName"/>
                  </b:Controls>
                </b:ControlGroup>

                <!--Titles -->
                <b:ControlGroup>
                  <b:ControlLabel>Title</b:ControlLabel>
                  <b:Controls>
                    <g:FlowPanel ui:field="termTitles"/>
                  </b:Controls>
                </b:ControlGroup>

                <!--Descriptions-->
                <b:ControlGroup>
                  <b:ControlLabel>Description</b:ControlLabel>
                  <b:Controls>
                    <g:FlowPanel ui:field="termDescriptions"/>
                  </b:Controls>
                </b:ControlGroup>

              </b:Form>
            </g:FlowPanel>
          </b:Column>
        </b:FluidRow>
      </b:Column>
    </b:FluidRow>

  </g:FlowPanel>
</ui:UiBinder>