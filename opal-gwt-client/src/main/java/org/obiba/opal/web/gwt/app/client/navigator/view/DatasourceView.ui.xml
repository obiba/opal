<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:c="urn:import:com.google.gwt.user.cellview.client"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel width="100%" addStyleNames="navigator">

    <g:FlowPanel addStyleNames="titlebar">
      <g:Label addStyleNames="title" ui:field="datasourceName">opal-data</g:Label>
      <g:Label addStyleNames="small-indent">
        <ui:msg description="Datasource title in parentheses">(Datasource)</ui:msg>
      </g:Label>
    </g:FlowPanel>

    <g:FlowPanel ui:field="toolbarPanel" addStyleNames="toolbar toolbar-left"/>

    <o:PropertiesTable condensed="true" borderedCell="false" zebra="true" addStyleNames="small-dual-indent top-margin"
        keyStyleNames="span2 small-indent">
      <g:FlowPanel>
        <g:Label>
          <ui:msg description="Type label">Type</ui:msg>
        </g:Label>
        <g:Label ui:field="datasourceType"/>
      </g:FlowPanel>
    </o:PropertiesTable>

    <o:HorizontalTabLayout ui:field="tabs" addStyleNames="small-dual-indent top-margin">
      <g:Anchor>
        <ui:msg description="Tables label">Tables</ui:msg>
      </g:Anchor>
      <g:FlowPanel>
        <g:InlineLabel ui:field="noTables">
          <ui:msg description="No Tables label">No Tables</ui:msg>
        </g:InlineLabel>
        <c:SimplePager ui:field="pager" location="CENTER" addStyleNames="right-aligned"/>
        <o:Table ui:field="table" width="100%" addStyleNames="left-aligned"/>
      </g:FlowPanel>

      <g:Anchor>
        <ui:msg description="Permissions label">Permissions</ui:msg>
      </g:Anchor>
      <g:SimplePanel ui:field="permissions"/>

    </o:HorizontalTabLayout>

  </g:FlowPanel>

</ui:UiBinder>