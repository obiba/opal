<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .right-aligned {
    float: right;
    }
  </ui:style>

  <g:DialogBox ui:field="dialogBox" modal="true">
    <g:DockLayoutPanel unit="EM" height="15em" width="30em">
      <g:center>
        <g:HTML ui:field="message" addStyleNames="main p">Confirmation message.</g:HTML>
      </g:center>
      <g:south size="4">
        <g:HTMLPanel addStyleNames="footer">
          <span class="{style.right-aligned} top-margin">
            <g:Button ui:field="yesButton" styleName="btn btn-primary">
              <ui:msg description="Yes label">Yes</ui:msg>
            </g:Button>
            <g:Button ui:field="noButton" styleName="btn">
              <ui:msg description="No label">No</ui:msg>
            </g:Button>
          </span>
        </g:HTMLPanel>
      </g:south>
    </g:DockLayoutPanel>
  </g:DialogBox>


</ui:UiBinder>