<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view"
    xmlns:c="urn:import:com.google.gwt.user.cellview.client"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:DialogBox ui:field="dialog" autoHide="false" modal="true" glassEnabled="true">
    <g:caption>
      <ui:msg description="Entity Details title">Entity Details</ui:msg>
    </g:caption>
    <g:DockLayoutPanel unit="EM" ui:field="content" height="40em" width="50em">
      <g:center>
        <g:ScrollPanel>
          <g:FlowPanel addStyleNames="main">
            <o:PropertiesTable condensed="true" borderedCell="false" zebra="true"
                keyStyleNames="span2">
              <g:FlowPanel>
                <g:Label>
                  <ui:msg description="Entity type label">Entity Type</ui:msg>
                </g:Label>
                <g:Label ui:field="entityType"/>
              </g:FlowPanel>
              <g:FlowPanel>
                <g:Label>
                  <ui:msg description="Entity type label">Entity ID</ui:msg>
                </g:Label>
                <g:Label ui:field="entityId"/>
              </g:FlowPanel>
            </o:PropertiesTable>
            <g:FlowPanel styleName="input">
              <g:Label addStyleNames="key">
                <ui:msg description="Table label">Table</ui:msg>
              </g:Label>
              <o:TableChooser ui:field="tableChooser"/>
            </g:FlowPanel>

            <g:FlowPanel>
              <g:InlineLabel ui:field="noTables">
                <ui:msg description="No Tables label">No Tables</ui:msg>
              </g:InlineLabel>

              <b:Controls addStyleNames="left-aligned">
                <b:InputAddOn prependIcon="FILTER">
                  <o:TextBoxClearable ui:field="filter"></o:TextBoxClearable>
                </b:InputAddOn>
              </b:Controls>
              <c:SimplePager ui:field="pager" location="CENTER" addStyleNames="right-aligned"/>
              <o:Table ui:field="table" width="100%" addStyleNames="left-aligned"/>
            </g:FlowPanel>
          </g:FlowPanel>
        </g:ScrollPanel>
      </g:center>
      <g:south size="4">
        <g:FlowPanel addStyleNames="footer">
          <o:ResizeHandle ui:field="resizeHandle"></o:ResizeHandle>
          <g:Button styleName="btn right-aligned top-margin" ui:field="closeButton">
            <ui:msg description="Close label">Close</ui:msg>
          </g:Button>
        </g:FlowPanel>
      </g:south>
    </g:DockLayoutPanel>

  </g:DialogBox>

</ui:UiBinder>