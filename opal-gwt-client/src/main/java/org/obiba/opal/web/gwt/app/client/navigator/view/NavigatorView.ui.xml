<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">


  <o:WorkbenchLayout>
    <g:Label>
      <ui:msg description="Datasources label">Datasources</ui:msg>
    </g:Label>
    <g:Label></g:Label>
    <g:FlowPanel>
      <g:FlowPanel styleName="btn-group">
        <g:Button ui:field="createDatasourceButton" styleName="btn iconb i-plus">
          <ui:msg description="Create Datasource label">Create Datasource</ui:msg>
        </g:Button>
        <g:Button ui:field="importDataButton" styleName="btn iconb i-up">
          <ui:msg description="Data Import label">Import Data</ui:msg>
        </g:Button>
        <g:Button ui:field="exportDataButton" styleName="btn iconb i-down">
          <ui:msg description="Data Export label">Export Data</ui:msg>
        </g:Button>
      </g:FlowPanel>
      <g:Button ui:field="refreshButton" styleName="btn iconb i-sync">
        <ui:msg description="Refresh label">Refresh</ui:msg>
      </g:Button>
      <g:FlowPanel addStyleNames="right-aligned small-search-box">
        <!--<b:Controls>-->
        <!--<b:InputAddOn prependIcon="SEARCH">-->
        <!--<b:Controls >-->
        <!--<b:InputAddOn prependIcon="FILTER">-->
        <g:Grid>
          <g:row>
            <g:customCell styleName="top-aligned">
              <b:TextBox ui:field="search"></b:TextBox>
            </g:customCell>
            <g:customCell styleName="top-aligned">
              <o:HelpImage page="Working+with+Datasources" imageSize="16" addStyleNames="xsmall-indent"></o:HelpImage>
            </g:customCell>
          </g:row>
        </g:Grid>

        <!--</b:InputAddOn>-->

        <!--</b:Controls>-->

        <!--<b:TextBox ui:field="search"></b:TextBox>-->
        <!--<o:HelpImage page="Working+with+Datasources" addStyleNames="small-indent"></o:HelpImage>-->
        <!--</b:InputAddOn>-->
        <!--</b:Controls>-->


      </g:FlowPanel>

    </g:FlowPanel>
    <g:SplitLayoutPanel>
      <g:center>
        <g:ScrollPanel width="100%" ui:field="navigatorDisplayPanel"/>
      </g:center>
      <g:west size='240'>
        <g:ScrollPanel ui:field="treePanel">
        </g:ScrollPanel>
      </g:west>
    </g:SplitLayoutPanel>
  </o:WorkbenchLayout>

</ui:UiBinder>