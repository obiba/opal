<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">


  <g:FlowPanel>
    <b:PageHeader>
      <ui:msg description="Projects label">Projects</ui:msg>
    </b:PageHeader>
    <g:FlowPanel>
      <b:ButtonToolbar addStyleNames="inline">
        <b:ButtonGroup>
          <b:Button ui:field="createDatasourceButton" size="MINI" icon="PLUS">
            <ui:msg description="Create Project label">Add Project</ui:msg>
          </b:Button>
          <b:Button ui:field="importDataButton" size="MINI" icon="SIGNIN">
            <ui:msg description="Data Import label">Import Data</ui:msg>
          </b:Button>
          <b:Button ui:field="exportDataButton" size="MINI" icon="SIGNOUT">
            <ui:msg description="Data Export label">Export Data</ui:msg>
          </b:Button>
        </b:ButtonGroup>
        <b:Button ui:field="refreshButton" size="MINI" icon="REFRESH">
          <ui:msg description="Refresh label">Refresh</ui:msg>
        </b:Button>
      </b:ButtonToolbar>
      <g:FlowPanel addStyleNames="right-aligned small-search-box">
        <g:Grid>
          <g:row>
            <g:customCell styleName="top-aligned">
              <o:SuggestListBox ui:field="search" addStyleNames="variable-search-box"></o:SuggestListBox>
            </g:customCell>
            <g:customCell styleName="top-aligned">
              <o:HelpImage page="Working+with+Datasources" imageSize="16" addStyleNames="xsmall-indent"></o:HelpImage>
            </g:customCell>
          </g:row>
        </g:Grid>
      </g:FlowPanel>
    </g:FlowPanel>
    <g:SimplePanel ui:field="breadcrumb"/>
    <g:SimplePanel ui:field="navigatorDisplayPanel"/>
  </g:FlowPanel>

</ui:UiBinder>