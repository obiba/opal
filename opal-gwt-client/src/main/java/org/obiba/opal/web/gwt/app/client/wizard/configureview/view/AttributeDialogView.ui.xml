<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:o="urn:org.obiba.opal.web.gwt.app.client.widgets.view"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .optionsPanelMsg td { margin: 0.5em 0.5em 0.5em 0.5em; }
    .right-aligned { float: right; }
  </ui:style>

  <g:DialogBox ui:field="dialog" autoHide="false" modal="true" height="18em" width="35em">
    <g:caption>
      <ui:msg description="Add new attribute title" >Add New Attribute</ui:msg>
    </g:caption>
    <g:DockLayoutPanel unit="EM" height="18em" width="35em">
      <g:center>
      <g:ScrollPanel>
        <g:HTMLPanel addStyleNames="main {style.optionsPanelMsg}">
            <table class="gwt-KeyValue full-width" cellspacing="10">
              <tbody>
                <tr>
                  <td valign="top"><ui:msg description="Name label">Name</ui:msg>:</td>
                  <td>
                    <g:InlineLabel ui:field="uneditableName"></g:InlineLabel>
                    <g:FlowPanel ui:field="editableName">
                      <g:FlowPanel>
		                <g:RadioButton name="name" ui:field="predefinedAttributeNameRadioButton" checked="true"><ui:msg description="Predefined label">Predefined:</ui:msg></g:RadioButton><g:ListBox ui:field="labels" addStyleNames="small-indent"/>
		              </g:FlowPanel>
		              <g:FlowPanel addStyleNames="top-margin">
		                <g:RadioButton name="name" ui:field="customAttributeNameRadioButton"><ui:msg description="Custom label">Custom:</ui:msg></g:RadioButton><g:TextBox name="customAttributeName" ui:field="customAttributeName" visibleLength="24"  addStyleNames="small-indent"/>
		              </g:FlowPanel>           
		            </g:FlowPanel>
                  </td>
                </tr>
                <tr>
                  <td valign="top"><ui:msg description="Value label">Value</ui:msg>:</td>
                  <td><g:SimplePanel ui:field="simplePanel"/></td>
                </tr>
              </tbody>
            </table>
          </g:HTMLPanel>
        </g:ScrollPanel>
      </g:center>
      <g:south size="4">
        <g:HTMLPanel addStyleNames="footer">
          <span class="{style.right-aligned} top-margin">
            <g:Button ui:field="saveButton" styleName="btn btn-primary">
                <ui:msg description="Save button label">Save</ui:msg>
            </g:Button>
            <g:Button ui:field="cancelButton" styleName="btn">
                <ui:msg description="Cancel button label">Cancel</ui:msg>
            </g:Button>
          </span>
        </g:HTMLPanel>
      </g:south> 
    </g:DockLayoutPanel>
  </g:DialogBox>

</ui:UiBinder>