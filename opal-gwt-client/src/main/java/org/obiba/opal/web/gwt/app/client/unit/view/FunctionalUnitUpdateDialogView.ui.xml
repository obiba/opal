<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <g:DialogBox ui:field="dialog" autoHide="false" modal="true" glassEnabled="true">
    <g:DockLayoutPanel unit="EM" height="30em" width="40em">
      <g:center>
        <g:ScrollPanel>
          <g:FlowPanel addStyleNames="main">
            <g:FlowPanel styleName="input">
              <g:Label addStyleNames="key"><ui:msg description="Name label">Name</ui:msg></g:Label>
              <g:TextBox name="functionalUnitName" ui:field="functionalUnitName"/>
            </g:FlowPanel>
            <g:FlowPanel styleName="input">
              <g:CheckBox ui:field="selectEnabled" addStyleNames="key">
                <ui:msg description="Identifier Variables Filter label">Identifier Variables Filter</ui:msg>
              </g:CheckBox>
              <g:TextArea name="select" ui:field="select" addStyleNames="not-so-full-width"/>
            </g:FlowPanel>
          </g:FlowPanel>
        </g:ScrollPanel>
      </g:center>
      <g:south size="4">
        <g:HTMLPanel addStyleNames="footer">
          <span class="right-aligned top-margin">
            <g:Button ui:field="updateFunctionalUnitButton" styleName="btn btn-primary">
              <ui:msg description="Save button label">Save</ui:msg>
            </g:Button>
            <g:Button ui:field="cancelButton" styleName="btn">
              <ui:msg description="Cancel button label">Cancel</ui:msg>
            </g:Button>
          </span>
        </g:HTMLPanel>
      </g:south>
    </g:DockLayoutPanel>

  </g:DialogBox>

</ui:UiBinder>