<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view"
             ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
             ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
             ui:generateLocales="default">

  <g:DialogBox ui:field="dialog" autoHide="false" modal="true" glassEnabled="true">
    <g:DockLayoutPanel unit="EM" ui:field="content" height="46em" width="50em">
      <g:center>
        <g:ScrollPanel>
          <g:FlowPanel addStyleNames="main">
            <g:FlowPanel styleName="input">
              <g:Label addStyleNames="p large-bottom-margin"><ui:msg description="Name label">A "Unit" is used to
                protect participant's privacy while importing or exporting data with Opal. This privacu is ensured by hiding the private participant identifier and encrypting the data.</ui:msg></g:Label>
            </g:FlowPanel>
            <g:FlowPanel styleName="input">
              <g:Label addStyleNames="key"><ui:msg description="Name label">Name</ui:msg></g:Label>
              <g:TextBox name="functionalUnitName" ui:field="functionalUnitName"/>
            </g:FlowPanel>
            <g:FlowPanel styleName="input">
              <g:Label addStyleNames="key"><ui:msg description="Name label">Description</ui:msg></g:Label>
              <g:TextArea name="select" ui:field="functionalUnitDescription" addStyleNames="not-so-full-width"/>
            </g:FlowPanel>
            <g:DisclosurePanel ui:field="options" addStyleNames="full-width">
              <g:customHeader>
                <g:Label><ui:msg description="Options title">Advanced Options</ui:msg></g:Label>
              </g:customHeader>
              <g:FlowPanel styleName="input">
                <g:CheckBox ui:field="selectEnabled" addStyleNames="key">
                  <ui:msg description="Identifier Variables Filter label">Identifier Variables Filter</ui:msg>
                </g:CheckBox>
                <g:TextArea name="select" ui:field="select" addStyleNames="not-so-full-width"/>
                <g:FlowPanel addStyleNames="help-block">
                  <g:InlineLabel><ui:msg description="Filter with Magma Javascript API">Filter script written with</ui:msg></g:InlineLabel>
                  <g:Anchor styleName="xsmall-indent" href="http://wiki.obiba.org/display/OPALDOC/Magma+Javascript+API" target="_blank" text="Magma Javascript API." />
                </g:FlowPanel>
              </g:FlowPanel>
            </g:DisclosurePanel>
          </g:FlowPanel>
        </g:ScrollPanel>
      </g:center>
      <g:south size="4">
        <g:HTMLPanel addStyleNames="footer">
          <o:ResizeHandle ui:field="resizeHandle"></o:ResizeHandle>
          <span class="right-aligned top-margin">
            <g:Button ui:field="updateFunctionalUnitButton" styleName="btn btn-primary">
              <ui:msg description="Save button label">Save</ui:msg>
            </g:Button>
            <g:Button ui:field="cancelButton" styleName="btn">
              <ui:msg description="Cancel button label">Cancel</ui:msg>
            </g:Button>
          </span>
        </g:HTMLPanel>
      </g:south>
    </g:DockLayoutPanel>

  </g:DialogBox>

</ui:UiBinder>