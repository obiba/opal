<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <o:Modal ui:field="modal" closeVisible="true" keyboard="true" animation="false">
    <!-- Name -->
    <g:FlowPanel ui:field="filePanel" visible="true">
      <b:ControlGroup ui:field="userGroup">
        <b:ControlLabel>
          <ui:msg description="User label">User</ui:msg>
          <o:RequiredIcon/>
        </b:ControlLabel>
        <b:Controls>
          <b:TextBox ui:field="user"/>
        </b:Controls>
        <b:HelpBlock>
          <ui:msg description="Taxonomy Import User help">Github user or organization name.</ui:msg>
        </b:HelpBlock>
      </b:ControlGroup>

      <!-- Repository -->
      <b:ControlGroup ui:field="repositoryGroup">
        <b:ControlLabel>
          <ui:msg description="Repository label">Repository</ui:msg>
          <o:RequiredIcon/>
        </b:ControlLabel>
        <b:Controls>
          <b:TextBox ui:field="repository"/>
        </b:Controls>
        <b:HelpBlock>
          <ui:msg description="Taxonomy Author help">Github repository name.</ui:msg>
        </b:HelpBlock>
      </b:ControlGroup>

      <!-- Reference -->
      <b:ControlGroup>
        <b:ControlLabel>
          <ui:msg description="Reference label">Reference</ui:msg>
        </b:ControlLabel>
        <b:Controls>
          <b:TextBox ui:field="reference"/>
        </b:Controls>
        <b:HelpBlock>
          <ui:msg description="Taxonomy Git Ref help">Repository branch name (e.g. master), release version (1.0) or a commit id.</ui:msg>
        </b:HelpBlock>
      </b:ControlGroup>

      <!-- File Path -->
      <b:ControlGroup>
        <b:ControlLabel>
          <ui:msg description="File label">File</ui:msg>
        </b:ControlLabel>
        <b:Controls>
          <b:TextBox ui:field="file"/>
        </b:Controls>
        <b:HelpBlock>
          <ui:msg description="Taxonomy Git File Path help">Taxonomy YAML file name (e.g. taxonomy.yml or scales/taxonomy.yml). Leave this field empty to import all taxonomy files.</ui:msg>
        </b:HelpBlock>
      </b:ControlGroup>
    </g:FlowPanel>

    <g:FlowPanel ui:field="mrPanel" visible="false">
      <b:Paragraph>
        <ui:msg description="MR Taxonomies text">Maelstrom Research provides variable classifications that were elaborated after the analysis of a large amount of epidemiological studies.
        </ui:msg>
      </b:Paragraph>

      <!-- Download Key -->
      <b:ControlGroup ui:field="downloadKeyGroup">
        <b:ControlLabel>
          <ui:msg description="Download Key label">Download Key</ui:msg>
        </b:ControlLabel>
        <b:Controls>
          <b:TextBox ui:field="downloadKey"/>
        </b:Controls>
        <b:HelpBlock>
          <ui:msg description="Taxonomy Git Download Key help">The download key that can be obtained from the
            <a href="https://taxonomies.maelstrom-research.org" target="_blank">Maelstrom Research Download Request Form</a>.</ui:msg>
        </b:HelpBlock>
      </b:ControlGroup>
    </g:FlowPanel>

    <g:FlowPanel ui:field="tagPanel" visible="false">
      <g:Image ui:field="fetchingTagsProgress" visible="true" url="image/loading.gif"/>

      <b:ControlGroup ui:field="tagsGroup">
        <b:ControlLabel for="tags">
          <ui:msg description="Taxonomy Git Tags">Released Versions</ui:msg>
        </b:ControlLabel>
        <o:Chooser ui:field="tags" name="tags" enabled="false"/>
        <b:HelpBlock>
          <ui:msg description="Taxonomy Git tags help label">
            Select a version to import.
          </ui:msg>
        </b:HelpBlock>
      </b:ControlGroup>
    </g:FlowPanel>

    <b:ControlGroup ui:field="overrideGroup">
      <b:CheckBox ui:field="overrideExisting">
        <ui:msg description="Override existing taxonomy label">Override existing taxonomy</ui:msg>
      </b:CheckBox>
    </b:ControlGroup>


    <g:FlowPanel ui:field="acceptedPanel" visible="false">
      <b:Paragraph>
        <ui:msg description="MR Taxonomies License text">These taxonomies are available under the <a href="https://creativecommons.org/licenses/by-nc-nd/4.0/" target="_blank">Creative Commons License with Non Commercial and No Derivatives</a> constraints and are free for academic.
        </ui:msg>
      </b:Paragraph>
      <b:ControlGroup ui:field="acceptedGroup">
        <b:CheckBox ui:field="accepted">
          <ui:msg description="License Accepted label">I have read and accepted the license terms.</ui:msg>
        </b:CheckBox>
      </b:ControlGroup>
    </g:FlowPanel>

    <b:ModalFooter>
      <b:Button type="PRIMARY" ui:field="importRepo">
        <ui:msg description="Import label">Import</ui:msg>
      </b:Button>
      <b:Button ui:field="cancel">
        <ui:msg description="Cancel label">Cancel</ui:msg>
      </b:Button>
    </b:ModalFooter>

  </o:Modal>
</ui:UiBinder>