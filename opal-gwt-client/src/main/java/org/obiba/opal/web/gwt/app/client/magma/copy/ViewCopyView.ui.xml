<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <o:Modal ui:field="modal" resizable="true" closeVisible="true" keyboard="true" animation="false">

    <g:FlowPanel>

      <b:Paragraph>
        <ui:msg description="View Copy help">
          Duplicate the view: derived variables, table references and entity filter (if any).
        </ui:msg>
      </b:Paragraph>

      <!--Destination-->
      <b:ControlGroup>
        <b:ControlLabel>
          <ui:msg description="Destination field">Destination</ui:msg>
          <o:RequiredIcon/>
        </b:ControlLabel>
        <b:Controls>
          <o:Chooser ui:field="datasources"/>
        </b:Controls>
        <b:HelpBlock>
          <ui:msg description="Copy Destination help">Copy into the selected project.</ui:msg>
        </b:HelpBlock>
      </b:ControlGroup>

      <!--New Name-->
      <b:ControlGroup ui:field="newTableNameGroup">
        <b:ControlLabel>
          <ui:msg description="Copy Destination View Name field">Copy Name</ui:msg>
        </b:ControlLabel>
        <b:Controls>
          <b:TextBox ui:field="newName"/>
        </b:Controls>
        <b:HelpBlock>
          <ui:msg description="Copy Destination View Name help">
            Name under which this view will be copied.
          </ui:msg>
        </b:HelpBlock>
      </b:ControlGroup>

    </g:FlowPanel>

    <b:ModalFooter>
      <b:Button ui:field="submitButton" type="PRIMARY">
        <ui:msg description="Submit button label">Submit</ui:msg>
      </b:Button>
      <b:Button ui:field="cancelButton">
        <ui:msg description="Cancel button label">Cancel</ui:msg>
      </b:Button>
    </b:ModalFooter>
  </o:Modal>

</ui:UiBinder>
