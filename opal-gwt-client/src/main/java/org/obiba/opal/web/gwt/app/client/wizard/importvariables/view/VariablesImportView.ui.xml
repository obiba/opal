<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
  xmlns:g="urn:import:com.google.gwt.user.client.ui" 
  xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.workbench.view" 
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  xmlns:w='urn:import:org.obiba.opal.web.gwt.app.client.widgets.view'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" 
  ui:generateLocales="default">

  <o:WizardDialogBox ui:field="dialog" autoHide="false" modal="true" height="40em" width="60em">
    <g:caption>
      <ui:msg description="Add Update Tables label">Add/Update Tables</ui:msg>
    </g:caption>
    
    <g:FlowPanel>
      <o:WizardStep ui:field="fileSelectionStep">
        <g:FlowPanel>
          <g:InlineLabel><ui:msg description="Supported variables file format btn-information">The following file format is supported for describing the variables:</ui:msg></g:InlineLabel>
          <g:Button ui:field="downloadExcelTemplateButton" styleName="btn btn-info small-indent"><ui:msg description="Download Opal Variables Template button label">Download Opal Variables Template</ui:msg></g:Button>
          <g:FlowPanel styleName="input">
            <g:Label ui:field="destinationLabel" addStyleNames="key" visible="false"><ui:msg description="Destination Datasource label">Destination Datasource</ui:msg></g:Label>
            <o:Chooser ui:field="datasources" name="datasources" visible="false"/>
          </g:FlowPanel> 
          <g:FlowPanel styleName="input">
            <g:Label addStyleNames="key"><ui:msg description="Variables File label">Variables File</ui:msg></g:Label>
            <g:SimplePanel ui:field="fileSelectionPanel" />
          </g:FlowPanel>
          <g:FlowPanel styleName="input" ui:field="charsetPanel">
            <g:Label addStyleNames="key"><ui:msg description="Character set label">Character Set</ui:msg></g:Label>
            <w:CharacterSetView ui:field='charsetView'></w:CharacterSetView>
          </g:FlowPanel>
          <g:FlowPanel>
            <g:Label ui:field="failed" addStyleNames="p"><ui:msg description="Variables file validation failed">Some errors have been detected. You should fix them before importing this variables file.</ui:msg></g:Label>
            <o:DatasourceParsingErrorPanel ui:field="datasourceParsingErrors" addStyleNames="p full-width"/>
          </g:FlowPanel>
        </g:FlowPanel>
       </o:WizardStep>
       
       <o:WizardStep ui:field="compareStep"/>
       
       <o:WizardStep ui:field="conclusionStep"/>
    
       <g:HTMLPanel ui:field="fileSelectionHelp">
          <g:Label addStyleNames="title"><ui:msg description="Variables File label">Variables File</ui:msg></g:Label>
          <p>
            <ui:msg description="Opal Variables Template note">Note: Certain defaults apply, as follows:</ui:msg></p>
              <ul>
                <li><ui:msg description="Default table name">The default table name is <b>Table</b>.</ui:msg></li>
                <li><ui:msg description="Default value type">The default value type is <b>text</b>.</ui:msg></li>
                <li><ui:msg description="Default entity type">The default entity type is <b>Participant</b>.</ui:msg></li>
              </ul>
          <p><ui:msg description="Opal Variables Template help">For complete details, refer to the "Help" sheet in the template.</ui:msg></p>
          
          <g:Label addStyleNames="title"><ui:msg description="Datasource label">Datasource</ui:msg></g:Label>
          <p><ui:msg description="Datasource to modify btn-information">Specify the datasource to modify.  Existing tables will be updated and new tables will be created.</ui:msg></p>
        
       </g:HTMLPanel>
     </g:FlowPanel>      
  </o:WizardDialogBox>

</ui:UiBinder>