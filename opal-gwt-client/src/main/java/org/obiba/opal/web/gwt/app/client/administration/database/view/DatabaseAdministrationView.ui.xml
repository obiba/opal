<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:c="urn:import:com.google.gwt.user.cellview.client"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>
    <g:FlowPanel addStyleNames="page-header">
      <b:Breadcrumbs ui:field="breadcrumbs" />
    </g:FlowPanel>

    <g:FlowPanel addStyleNames="panel">
      <g:VerticalPanel width="100%" addStyleNames="content">
        <g:Button ui:field="addDatabaseButton" styleName="btn">
          <ui:msg description="Add Database label">Add Database</ui:msg>
        </g:Button>
        <c:SimplePager ui:field="databaseTablePager" location="CENTER" addStyleNames="right-aligned"/>
        <o:Table width="100%" ui:field="databaseTable" addStyleNames="gwt-CellTable"/>
      </g:VerticalPanel>
    </g:FlowPanel>

    <g:FlowPanel ui:field="permissionsPanel" addStyleNames="panel">
      <g:FlowPanel addStyleNames="title">
        <g:InlineLabel>
          <ui:msg description="Permissions label">Permissions</ui:msg>
        </g:InlineLabel>
        <o:HelpImage imageSize="16" tooltipWidth="500px" tooltipHeight="350px">
          <g:HTMLPanel>
            <g:Label addStyleNames="title">
              <ui:msg description="Database Permissions label">Database Permissions</ui:msg>
            </g:Label>
            <p>
              <ui:msg description="Database Permissions information">
                Permissions for creating new databases that Opal can then connect to.
              </ui:msg>
            </p>
            <g:Label addStyleNames="title">
              <ui:msg description="Database Administrators label">Administrators</ui:msg>
            </g:Label>
            <p>
              <ui:msg description="Database Administrators information">
                Database Administrators are allowed to create new and edit existing databases.
              </ui:msg>
            </p>
          </g:HTMLPanel>
        </o:HelpImage>
      </g:FlowPanel>
      <g:SimplePanel ui:field="permissions"></g:SimplePanel>
    </g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder>