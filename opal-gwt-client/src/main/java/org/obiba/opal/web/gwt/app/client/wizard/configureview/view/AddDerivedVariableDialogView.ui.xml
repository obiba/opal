<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:o="urn:org.obiba.opal.web.gwt.app.client.widgets.view" xmlns:g2="urn:import:com.google.gwt.user.cellview.client"
  ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat' ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator"
  ui:generateLocales="default">

  <ui:style>
    .optionsPanelMsg td { margin: 0.5em 0.5em 0.5em 0.5em; }
    .right-aligned { float: right; }
    .top-margin {
    margin-top: 0.5em; }
  </ui:style>

  <g:DialogBox ui:field="dialog" autoHide="false" modal="true" height="10em" width="30em" addStyleNames="addDerivedVariablesDialog">
    <g:caption>
      <ui:msg description="Add derived variable title">Add Derived Variable</ui:msg>
    </g:caption>
    <g:DockLayoutPanel unit="EM" height="8em" width="30em">
      <g:center>
        <g:HTMLPanel addStyleNames="indent small-top-margin">
          <table>
            <tbody>
              <tr>
                <td>
                  <g:Label>
                    <ui:msg description="Name label">Name</ui:msg>:
                  </g:Label>
                </td>
                <td>
                  <g:SuggestBox ui:field="variableNameSuggestBox" />
                </td>
              </tr>
            </tbody>
          </table>
        </g:HTMLPanel>
      </g:center>
      <g:south size="3">
        <g:HTMLPanel addStyleNames="footer">
          <span class="{style.right-aligned} {style.top-margin}">
            <g:Button ui:field="addButton">
              <ui:msg description="Add button label">Add</ui:msg>
            </g:Button>
            <g:Button ui:field="cancelButton">
              <ui:msg description="Cancel button label">Cancel</ui:msg>
            </g:Button>
          </span>
        </g:HTMLPanel>
      </g:south>
    </g:DockLayoutPanel>
  </g:DialogBox>

</ui:UiBinder>