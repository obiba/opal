<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .inline {
    display: inline;
    }

    .left-aligned {
    float: left;
    }

    .right-aligned {
    float: right;
    }

    .left-margin {
    padding-left: 5px;
    }

    .right-margin {
    padding-right: 5px;
    }

    .top-margin {
    padding-top: 0.5em;
    }

    .bottom-margin {
    padding-bottom: 5px;
    border-bottom: #BBBBBB 1px solid;
    }

    .name-input {
    width: 90%;
    }
  </ui:style>
  <o:Modal ui:field="dialog" resizable="true" closeVisible="true" keyboard="true" animation="false">
    <g:FlowPanel ui:field="content">
      <g:FlowPanel>
        <g:HTMLPanel ui:field="namePanel"
            addStyleNames="{style.top-margin} {style.bottom-margin} {style.left-margin} {style.right-margin}">
          <g:InlineLabel>
            <ui:msg description="Name label">Name</ui:msg>
          </g:InlineLabel>
          :
          <b:TextBox ui:field="newFileName" addStyleNames="{style.name-input}"/>
        </g:HTMLPanel>

        <b:FluidRow>
          <b:Column size="3">
            <g:ScrollPanel ui:field="fileSystemTreePanel">
            </g:ScrollPanel>
          </b:Column>
          <b:Column size="9">
            <g:ScrollPanel ui:field="folderDetailsPanel">
            </g:ScrollPanel>
          </b:Column>
        </b:FluidRow>
      </g:FlowPanel>

      <b:ModalFooter>
        <g:FlowPanel addStyleNames="pull-left" >
          <g:FlowPanel ui:field="createFolderPanel">
            <b:Controls>
            <b:TextBox ui:field="createFolderName" addStyleNames="inline-block"/>
            <b:Button ui:field="createFolderButton" >
              <ui:msg description="Create Folder button label">Create Folder</ui:msg>
            </b:Button>
            </b:Controls>
          </g:FlowPanel>
          <b:Button ui:field="uploadButton">
            <ui:msg description="Upload File label">Upload</ui:msg>
          </b:Button>
        </g:FlowPanel>
        <g:FlowPanel addStyleNames="pull-right">
          <b:Button ui:field="selectButton" type="PRIMARY">
            <ui:msg description="Select button label">Select</ui:msg>
          </b:Button>
          <b:Button ui:field="cancelButton">
            <ui:msg description="Cancel button label">Cancel</ui:msg>
          </b:Button>
        </g:FlowPanel>
      </b:ModalFooter>
    </g:FlowPanel>
  </o:Modal>
</ui:UiBinder>