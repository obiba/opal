<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator"
    ui:generateLocales="default">

  <g:FlowPanel>
    <g:FlowPanel addStyleNames="page-header">
      <b:Breadcrumbs ui:field="breadcrumbs"/>
    </g:FlowPanel>

    <g:FlowPanel addStyleNames="panel">
      <b:Heading size="5" addStyleNames="no-top-margin">
        <ui:msg description="Environment Properties header">Environment Properties</ui:msg>
      </b:Heading>
      <b:Row>
        <b:Column size="6">
          <o:PropertiesTable ui:field="javaProperties"/>
        </b:Column>
      </b:Row>
    </g:FlowPanel>

    <g:FlowPanel addStyleNames="panel">
      <b:Heading size="5" addStyleNames="no-top-margin">
        <ui:msg description="JVM Status header">Status</ui:msg>
      </b:Heading>
      <b:Row>
        <b:Column size="6">
          <g:Label ui:field="uptime"/>
        </b:Column>
      </b:Row>
      <b:Row>
        <b:Column size="4" offset="1" ui:field="memHeapChartColumn"/>
        <b:Column size="4" offset="2" ui:field="memNonHeapChartColumn"/>
      </b:Row>
      <b:Row>
        <b:Column size="4" offset="1" ui:field="threadsChartColumn"/>
        <b:Column size="4" offset="2" ui:field="gcChartColumn"/>
      </b:Row>
    </g:FlowPanel>

    <g:FlowPanel addStyleNames="panel">
      <b:Heading size="5" addStyleNames="no-top-margin">
        <ui:msg description="System Properties header">System Properties</ui:msg>
      </b:Heading>
      <b:Row>
        <b:Column size="12">
          <o:PropertiesTable ui:field="systemProperties"/>
        </b:Column>
      </b:Row>
    </g:FlowPanel>
  </g:FlowPanel>
</ui:UiBinder>