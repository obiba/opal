<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:g2="urn:import:com.google.gwt.user.cellview.client" ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
  ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <ui:style>
    .remoteFolderName{ font-weight:bold; }
    .progress {vertical-align: bottom;}
  </ui:style>

  <g:DialogBox ui:field="dialog" autoHide="false" modal="true">
    <g:caption>
      <ui:msg description="Upload file dialog title">File Upload</ui:msg>
    </g:caption>
      <g:DockLayoutPanel unit="EM" height="14em" width="35em">
        <g:center>
          <g:ScrollPanel>
            <g:FlowPanel ui:field="inputFieldPanel" addStyleNames="main">
              <g:FlowPanel>
                <g:Label><ui:msg description="Select file to upload label">Select the file to be uploaded in directory:</ui:msg></g:Label>
                <g:FlowPanel addStyleNames="small-top-margin">
                  <g:InlineLabel ui:field="remoteFolderName" addStyleNames="small-indent {style.remoteFolderName}"/>
                  <g:Image ui:field="uploadingText" visible="false" addStyleNames="small-indent {style.progress}" url="image/in-progress.gif"/>
                </g:FlowPanel>
              </g:FlowPanel>
              <g:FlowPanel styleName="input">
                <g:FormPanel encoding="multipart/form-data" method="POST" ui:field="form">
                  <g:FileUpload name="fileToUpload" ui:field="fileToUpload"/>
                </g:FormPanel>
              </g:FlowPanel>
            </g:FlowPanel>
          </g:ScrollPanel>
        </g:center>
        <g:south size="4">
          <g:HTMLPanel addStyleNames="footer">
            <span class="right-aligned top-margin">
              <g:Button ui:field="uploadButton" styleName="btn primary">
                <ui:msg description="Upload button label">Upload</ui:msg>
              </g:Button>
              <g:Button ui:field="cancelButton" styleName="btn">
                <ui:msg description="Cancel button label">Cancel</ui:msg>
              </g:Button>
            </span>
          </g:HTMLPanel>
        </g:south>
      </g:DockLayoutPanel>
  </g:DialogBox>

</ui:UiBinder>