<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <g:DialogBox ui:field="dialog" autoHide="false" modal="true">
    <g:caption>
      <ui:msg description="Create folder dialog title">Create Folder</ui:msg>
    </g:caption>
    <g:DockLayoutPanel unit="EM" height="10em" width="35em">
      <g:center>
        <g:FlowPanel ui:field="inputFieldPanel" addStyleNames="main input">
          <g:Label addStyleNames="key">
            <ui:msg description="Folder Name label">Folder Name</ui:msg>
          </g:Label>
          <g:TextBox name="folderToCreate" ui:field="folderToCreate" visibleLength="40"/>
        </g:FlowPanel>
      </g:center>
      <g:south size="4">
        <g:HTMLPanel addStyleNames="footer">
          <span class="right-aligned top-margin">
            <g:Button ui:field="createFolderButton" styleName="btn btn-primary">
              <ui:msg description="Create folder button label">Create Folder</ui:msg>
            </g:Button>
            <g:Button ui:field="cancelButton" styleName="btn">
              <ui:msg description="Cancel button label">Cancel</ui:msg>
            </g:Button>
          </span>
        </g:HTMLPanel>
      </g:south>
    </g:DockLayoutPanel>
  </g:DialogBox>

</ui:UiBinder>