<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:o="urn:import:org.obiba.opal.web.gwt.app.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
    ui:generateKeys="com.google.gwt.i18n.server.keygen.MD5KeyGenerator" ui:generateLocales="default">

  <o:Modal ui:field="dialog" closeVisible="true" keyboard="true" animation="false">

    <b:ControlGroup>
      <b:ControlLabel>
        <ui:msg description="Folder Name label">Folder Name</ui:msg>
      </b:ControlLabel>
      <b:Controls>
        <b:TextBox name="folderToCreate" ui:field="folderToCreate" visibleLength="40"/>
      </b:Controls>
    </b:ControlGroup>

    <b:ModalFooter>
      <b:Button ui:field="createFolderButton" type="PRIMARY">
        <ui:msg description="Save label">Save</ui:msg>
      </b:Button>
      <b:Button ui:field="cancelButton">
        <ui:msg description="Cancel button label">Cancel</ui:msg>
      </b:Button>
    </b:ModalFooter>

  </o:Modal>

</ui:UiBinder>