<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <artifactId>opal</artifactId>
    <groupId>org.obiba.opal</groupId>
    <version>1.3-SNAPSHOT</version>
  </parent>

  <artifactId>opal-web-model</artifactId>
  <packaging>jar</packaging>

  <name>opal-web-model</name>
  <url>http://maven.apache.org</url>

  <dependencies>
    <dependency>
      <groupId>com.google.gwt</groupId>
      <artifactId>gwt-user</artifactId>
      <version>${gwt.version}</version>
      <scope>provided</scope>
    </dependency>
    <dependency>
      <groupId>com.google.protobuf</groupId>
      <artifactId>protobuf-java</artifactId>
      <version>${protobuf.version}</version>
    </dependency>
    <dependency>
      <groupId>com.google.protobuf</groupId>
      <artifactId>protobuf-java-format</artifactId>
      <version>1.1</version>
    </dependency>
    <dependency>
      <groupId>com.dyuproject.protostuff</groupId>
      <artifactId>protostuff-core</artifactId>
      <version>${protostuff.version}</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.7</version>
      <scope>test</scope>
    </dependency>
  </dependencies>

  <build>
    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <includes>
          <include>**/*.*</include>
        </includes>
      </resource>
      <!-- Creating a GWT module requires that the .java files be in the JAR file. -->
      <resource>
        <directory>target/generated-sources/protobuf-server</directory>
        <includes>
          <include>**/*.java</include>
        </includes>
      </resource>
      <resource>
        <directory>target/generated-sources/protobuf-gwt</directory>
        <includes>
          <include>**/*.java</include>
        </includes>
      </resource>
    </resources>
    <plugins>

      <plugin>
        <artifactId>maven-pmd-plugin</artifactId>
        <configuration>
          <excludeRoots>
            <excludeRoot>target/generated-sources/protobuf-server</excludeRoot>
            <excludeRoot>target/generated-sources/protobuf-gwt</excludeRoot>
          </excludeRoots>
        </configuration>
      </plugin>


      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.5</version>
        <executions>
          <execution>
            <id>add-source</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>add-source</goal>
            </goals>
            <configuration>
              <sources>
                <!-- This will add these directories to the build path -->
                <source>target/generated-sources/protobuf-server</source>
                <source>target/generated-sources/protobuf-gwt</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-antrun-plugin</artifactId>
        <executions>
          <execution>
            <id>generate-sources</id>
            <phase>generate-sources</phase>
            <configuration>
              <tasks>
                <!-- Determine which protoc binary we can use -->
                <condition property="os.protoc" value="${protobuf.version}-linux-x86_64">
                  <or>
                    <os name="linux" arch="amd64" />
                    <os name="linux" arch="x86_64" />
                  </or>
                </condition>
                <condition property="os.protoc" value="${protobuf.version}-linux-x86_32">
                  <or>
                    <os name="linux" arch="x86" />
                    <os name="linux" arch="i386" />
                  </or>
                </condition>
                <condition property="os.protoc" value="${protobuf.version}-win32">
                  <os family="windows" />
                </condition>

                <fail message="No protoc binary for your OS: ${os.name} ${os.arch}." unless="os.protoc" />

                <mkdir dir="target/generated-sources/protobuf-server" />

                <path id="protofiles">
                  <fileset dir="src/main/protobuf">
                    <include name="*.proto" />
                  </fileset>
                </path>
                <pathconvert pathsep=" " property="protofilesList" refid="protofiles">
					<map from="${basedir}/" to=""/>
				</pathconvert>
				
                <!-- Compile our .proto file -->
                <exec dir="${basedir}" executable="${basedir}/tools/protoc-${os.protoc}" failonerror="true">
                  <arg value="--java_out=target/generated-sources/protobuf-server" />
                  <arg line="${protofilesList}" />
                  <arg line="-Isrc/main/protobuf" />
                </exec>
              </tasks>
            </configuration>
            <goals>
              <goal>run</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <!-- This will compile the .proto file and produce JavaScriptOverlay classes usable by a GWT client -->
      <plugin>
        <groupId>com.dyuproject.protostuff</groupId>
        <artifactId>protostuff-maven-plugin</artifactId>
        <version>${protostuff.version}</version>
        <configuration>
          <protoModules>
            <protoModule>
              <source>src/main/protobuf/Ws.proto</source>
              <output>${basedir}/src/main/protostuff/custom_gwt_overlay.java.stg</output>
              <outputDir>target/generated-sources/protobuf-gwt</outputDir>
              <options>
                <property>
                  <!-- Override the package name -->
                  <name>org.obiba.opal.web.model</name>
                  <value>org.obiba.opal.web.model.client.ws</value>
                </property>
              </options>
            </protoModule>
            <protoModule>
              <source>src/main/protobuf/Magma.proto</source>
              <output>${basedir}/src/main/protostuff/custom_gwt_overlay.java.stg</output>
              <outputDir>target/generated-sources/protobuf-gwt</outputDir>
              <options>
                <property>
                  <!-- Override the package name -->
                  <name>org.obiba.opal.web.model</name>
                  <value>org.obiba.opal.web.model.client.magma</value>
                </property>
              </options>
            </protoModule>
            <protoModule>
              <source>src/main/protobuf/Opal.proto</source>
              <output>${basedir}/src/main/protostuff/custom_gwt_overlay.java.stg</output>
              <outputDir>target/generated-sources/protobuf-gwt</outputDir>
              <options>
                <property>
                  <!-- Override the package name -->
                  <name>generate_helper_methods</name>
                  <value>true</value>
                </property>
                <property>
                  <!-- Override the package name -->
                  <name>org.obiba.opal.web.model</name>
                  <value>org.obiba.opal.web.model.client.opal</value>
                </property>
              </options>
            </protoModule>
            <protoModule>
              <source>src/main/protobuf/Commands.proto</source>
              <output>${basedir}/src/main/protostuff/custom_gwt_overlay.java.stg</output>
              <outputDir>target/generated-sources/protobuf-gwt</outputDir>
              <options>
                <property>
                  <!-- Override the package name -->
                  <name>org.obiba.opal.web.model</name>
                  <value>org.obiba.opal.web.model.client.opal</value>
                </property>
              </options>
            </protoModule>
          </protoModules>
        </configuration>
        <executions>
          <execution>
            <id>generate-sources</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>compile</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

    </plugins>
  </build>
  <repositories>
    <repository>
      <id>obiba</id>
      <url>http://maven.obiba.org/maven2</url>
    </repository>
    <repository>
      <id>protobuf-java-format</id>
      <url>http://protobuf-java-format.googlecode.com/svn/trunk/repo/</url>
    </repository>
    <repository>
      <id>protostuff-repo</id>
      <name>protostuff-repo</name>
      <url>http://protostuff.googlecode.com/svn/repos/maven2</url>
    </repository>
  </repositories>
  <pluginRepositories>
    <pluginRepository>
      <id>obiba</id>
      <url>http://maven.obiba.org/maven2</url>
    </pluginRepository>
    <pluginRepository>
      <id>protostuff-repo</id>
      <name>protostuff-repo</name>
      <url>http://protostuff.googlecode.com/svn/repos/maven2</url>
    </pluginRepository>
  </pluginRepositories>

  <properties>
    <project.build.sourceEncoding>ISO-8859-1</project.build.sourceEncoding>
    <maven.compiler.source>1.6</maven.compiler.source>
    <maven.compiler.target>1.6</maven.compiler.target>
    <gwt.version>2.1.0.M2</gwt.version>
    <protobuf.version>2.3.0</protobuf.version>
    <protostuff.version>r1005</protostuff.version>
    <pmd.ruleset.dir>${basedir}/..</pmd.ruleset.dir>
  </properties>

</project>
