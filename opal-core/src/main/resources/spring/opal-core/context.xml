<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">

  <context:annotation-config/>

  <import resource="tx.xml"/>
  <import resource="hibernate-services.xml"/>
  <import resource="version.xml"/>
  <import resource="quartz.xml"/>
  <import resource="email.xml"/>

  <import resource="classpath*:/META-INF/opal/context.xml"/>

  <bean id="participantIdentifier"
      class="org.obiba.opal.core.domain.participant.identifier.impl.DefaultParticipantIdentifierImpl">
  </bean>

  <bean id="identifiersTableService" class="org.obiba.opal.core.service.impl.DefaultIdentifiersTableService">
    <property name="keysSessionFactory" ref="keySessionFactory"/>
  </bean>

  <bean class="org.springframework.scheduling.annotation.ScheduledAnnotationBeanPostProcessor"/>

</beans>
