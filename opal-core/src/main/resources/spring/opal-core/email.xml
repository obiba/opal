<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <bean class="org.springframework.mail.javamail.JavaMailSenderImpl">
    <property name="host">
      <value>${org.obiba.opal.smtp.host}</value>
    </property>
    <property name="port">
      <value>${org.obiba.opal.smtp.port}</value>
    </property>
    <property name="username">
      <value>${org.obiba.opal.smtp.username}</value>
    </property>
    <property name="password">
      <value>${org.obiba.opal.smtp.password}</value>
    </property>
    <property name="javaMailProperties">
      <bean class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="properties">
          <props>
            <prop key="mail.smtp.auth">${org.obiba.opal.smtp.auth}</prop>
          </props>
        </property>
        <property name="location" value="file:${OPAL_HOME}/conf/smtp.properties"/>
        <property name="ignoreResourceNotFound" value="true"/>
      </bean>
    </property>
  </bean>

  <bean class="org.springframework.ui.velocity.VelocityEngineFactoryBean">
    <property name="velocityProperties">
      <value>
        resource.loader=class
        class.resource.loader.class=org.apache.velocity.runtime.resource.loader.ClasspathResourceLoader
      </value>
    </property>
  </bean>

</beans>