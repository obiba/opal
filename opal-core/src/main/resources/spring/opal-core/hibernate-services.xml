<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <import resource="datasource.xml"/>
  <import resource="hibernate-session.xml"/>

  <bean id="persistenceManager" class="org.obiba.core.service.impl.hibernate.PersistenceManagerHibernateImpl">
    <qualifier value="opal-data"/>
    <property name="sessionFactory" ref="opalSessionFactory"/>
  </bean>

  <bean id="importService" class="org.obiba.opal.core.service.impl.DefaultImportService"/>
  <bean id="exportService" class="org.obiba.opal.core.service.impl.DefaultExportServiceImpl"/>
  <bean id="decryptService" class="org.obiba.opal.core.service.impl.DefaultDecryptService"/>

  <bean id="unitKeyStoreService" class="org.obiba.opal.core.service.impl.DefaultUnitKeyStoreServiceImpl">
    <property name="persistenceManager" ref="persistenceManager"/>
  </bean>

  <bean id="auditLogManager" class="org.obiba.magma.audit.hibernate.HibernateVariableEntityAuditLogManager">
    <property name="sessionFactory" ref="opalSessionFactory"/>
    <property name="userProvider" ref="userProvider"/>
  </bean>

  <bean id="userProvider" class="org.obiba.opal.audit.OpalUserProvider"/>

  <bean id="userService"
      class="org.obiba.opal.core.service.impl.UserServiceHibernateImpl" scope="singleton">
    <property name="sessionFactory" ref="opalSessionFactory"/>
    <property name="persistenceManager" ref="persistenceManager"/>
  </bean>

</beans>